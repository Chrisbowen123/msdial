<RibbonWindow x:Class="MsdialDimsCoreUiTestApp.View.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:view="clr-namespace:MsdialDimsCoreUiTestApp.View"
              xmlns:vm="clr-namespace:MsdialDimsCoreUiTestApp.ViewModel"
              mc:Ignorable="d"
              Title="MainWindow" x:Name="window" Height="1200" Width="1500">
    <Window.DataContext>
        <vm:MainWindowVM/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Resource.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="GridSplitter">
                <Setter Property="Background" Value="Gray"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Ribbon>
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu/>
            </Ribbon.ApplicationMenu>
            <Ribbon.QuickAccessToolBar>
                <RibbonQuickAccessToolBar/>
            </Ribbon.QuickAccessToolBar>
            <Ribbon.HelpPaneContent>
                <RibbonButton/>
            </Ribbon.HelpPaneContent>
            <RibbonTab Header="File"/>
            <RibbonTab Header="Process"/>
            <RibbonTab Header="Help"/>
            <RibbonTab Header="MS2">
                <RibbonGroup Header="Annotation filter">
                    <RibbonCheckBox Label="RefMatched" IsChecked="{Binding RefMatchedChecked}"/>
                    <RibbonCheckBox Label="Suggested" IsChecked="{Binding SuggestedChecked}"/>
                    <RibbonCheckBox Label="Unknown" IsChecked="{Binding UnknownChecked}"/>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <!-- File Navigator -->
                <Grid Grid.Row="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Text="File navigator"
                               Background="{StaticResource ThemeBrush}"
                               TextAlignment="Center"
                               Height="20" Grid.Row="0"/>
                    <ListBox ItemsSource="{Binding AnalysisFiles}"
                             IsSynchronizedWithCurrentItem="True"
                             Grid.Row="1">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding FileChangedCmd}"
                                                       CommandParameter="{Binding AnalysisFiles/}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ListBox>
                </Grid>

                <GridSplitter HorizontalAlignment="Stretch"
                              Height="2"
                              Grid.Row="1" />

                <!-- Alignment Navigator -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Alignment navigator"
                               Background="{StaticResource ThemeBrush}"
                               TextAlignment="Center"
                               Height="20" Grid.Row="0"/>
                    <ListBox ItemsSource="{Binding AlignmentFiles}"
                             IsSynchronizedWithCurrentItem="True"
                             Grid.Row="1">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding AlignmentChangedCmd}"
                                                       CommandParameter="{Binding AlignmentFiles/}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ListBox>
                </Grid>
            </Grid>

            <GridSplitter Grid.Column="0" HorizontalAlignment="Right"
                          Width="2" />

            <!--
            <Frame x:Name="resultFrame" Grid.Column="1"/>
            -->
            <ContentControl Content="{Binding ResultVM}" Grid.Column="1">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type vm:FileResultVM}">
                        <view:FileResultView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:AlignmentResultVM}">
                        <view:AlignmentResultView/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
    </Grid>
</RibbonWindow>
