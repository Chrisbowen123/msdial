<UserControl x:Class="MsdialDimsCoreUiTestApp.View.SpotSelectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MsdialDimsCoreUiTestApp.View"
             xmlns:manager="clr-namespace:CompMs.Graphics.AxisManager;assembly=ChartDrawing"
             xmlns:scatter="clr-namespace:CompMs.Graphics.Scatter;assembly=ChartDrawing"
             xmlns:axis="clr-namespace:CompMs.Graphics.GraphAxis;assembly=ChartDrawing"
             mc:Ignorable="d" 
             x:Name="SpotSelector"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <manager:ContinuousAxisManager x:Key="IntensityAxisManager"
                                       MinValue="{Binding DataContext.Ms1Area.Top, Source={x:Reference Name=SpotSelector}}"
                                       MaxValue="{Binding DataContext.Ms1Area.Bottom, Source={x:Reference Name=SpotSelector}}"
                                       ChartMargin="0.05"
                                       IsFlipped="True"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <scatter:ScatterControl x:Name="PeakScatter"
                                ItemsSource="{Binding AlignmentContainer.AlignmentSpotProperties}"
                                HorizontalAxis="{Binding HorizontalAxis.AxisMapper, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                VerticalAxis="{Binding AxisMapper, Source={StaticResource IntensityAxisManager}}"
                                MinX="{Binding Min, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                MaxX="{Binding Max, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                MinY="{Binding Min, Source={StaticResource IntensityAxisManager}}"
                                MaxY="{Binding Max, Source={StaticResource IntensityAxisManager}}"
                                HorizontalPropertyName="MassCenter"
                                VerticalPropertyName="HeightMax"
                                Grid.Row="0" Grid.Column="3" />
        <axis:HorizontalAxisControl x:Name="MzAxis"
                                    DataContext="{Binding HorizontalAxis, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                    HorizontalAxis="{Binding AxisMapper}"
                                    LabelTicks="{Binding LabelTicks}"
                                    MinX="{Binding Min}"
                                    MaxX="{Binding Max}"
                                    Grid.Row="2" Grid.Column="3" />
        <axis:VerticalAxisControl x:Name="IntensityAxis"
                                  DataContext="{Binding Source={StaticResource IntensityAxisManager}}"
                                  VerticalAxis="{Binding AxisMapper}"
                                  LabelTicks="{Binding LabelTicks}"
                                  MinY="{Binding Min}"
                                  MaxY="{Binding Max}"
                                  Grid.Row="0" Grid.Column="1" />
        <TextBlock Text="Mass"
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="3" Grid.Column="3" />
        <TextBlock Text="Intensity"
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0" Grid.Column="0" >
            <TextBlock.LayoutTransform>
                <TransformGroup>
                    <RotateTransform Angle="-90" />
                    <TranslateTransform X="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=TextBlock}}" />
                </TransformGroup>
            </TextBlock.LayoutTransform>
        </TextBlock>
        <GridSplitter Background="Black"
                      Height="2"
                      Margin="0,-3"
                      HorizontalAlignment="Stretch"
                      Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" />
        <GridSplitter Background="Black"
                      Width="2"
                      Margin="-3,0"
                      HorizontalAlignment="Stretch"
                      Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" />
    </Grid>
</UserControl>
