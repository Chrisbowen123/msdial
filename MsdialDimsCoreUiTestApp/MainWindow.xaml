<Window x:Class="MsdialDimsCoreUiTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MsdialDimsCoreUiTestApp"
        xmlns:manager="clr-namespace:CompMs.Graphics.AxisManager;assembly=ChartDrawing"
        xmlns:view="clr-namespace:MsdialDimsCoreUiTestApp.View"
        mc:Ignorable="d"
        x:Name="window"
        Title="MainWindow" Height="1200" Width="1500">
    <Window.DataContext>
        <local:MainWindowVM/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Resource.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <manager:ContinuousAxisManager x:Key="MassAxisManager"
                                           MinValue="{Binding DataContext.Ms1Area.Left, Source={x:Reference Name=window}}"
                                           MaxValue="{Binding DataContext.Ms1Area.Right, Source={x:Reference Name=window}}" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <!-- File Navigator -->
            <Grid Grid.Row="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="File navigator"
                           Height="20" Grid.Row="0"/>
                <ListBox ItemsSource="{Binding AnalysisFiles}"
                         IsSynchronizedWithCurrentItem="True"
                         Grid.Row="1">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SelectionChangedCmd}"
                                                   CommandParameter="{Binding AnalysisFiles/}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>
            </Grid>

            <GridSplitter HorizontalAlignment="Stretch"
                          Height="2"
                          Grid.Row="1" />

            <!-- Alignment Navigator -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="Alignment navigator"
                           Height="20" Grid.Row="0"/>
                <ListBox ItemsSource="{Binding AlignmentFiles}" Grid.Row="1"/>
            </Grid>
            
        </Grid>

        <Grid Grid.Column="2" >
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!-- Parameter setting -->
            <TextBlock Text="Param" Grid.Row="0" />

            <GridSplitter HorizontalAlignment="Stretch"
                          Height="2"
                          Grid.Row="1" />

            <!-- Peak selector -->
            <ListBox ItemsSource="{Binding Ms2Features}"
                     IsSynchronizedWithCurrentItem="True"
                     Grid.Row="2" />
            
        </Grid>

        <Grid Grid.Column="4" >
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <GridSplitter HorizontalAlignment="Stretch"
                          Height="2"
                          Grid.Row="1" />

            <!-- Ms1 raw spectrum -->
            <view:MS1Control HorizontalAxis="{Binding Source={StaticResource MassAxisManager}}"
                             Margin="0,5,5,0"
                             Grid.Row="0" />

            <!-- Ms1 peak view -->
            <view:PeakSelectControl HorizontalAxis="{Binding Source={StaticResource MassAxisManager}}"
                                    Margin="0,5,5,0"
                                    Grid.Row="2" />
            
        </Grid>

        <Grid Grid.Column="6" >
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- Annotation detailview -->
            <ContentControl Content="{Binding Ms2Features/ChromatogramPeakFeature}"
                            Grid.Row="0" />

            <GridSplitter HorizontalAlignment="Stretch"
                          Height="2"
                          Grid.Row="1" />

            <!-- Ms2 spectrum -->
            <view:MS2SpectrumControl Margin="0,0,5,5"
                                     Grid.Row="2"/>
            
        </Grid>

        <GridSplitter HorizontalAlignment="Stretch"
                      Width="2"
                      Grid.Column="1" />
        <GridSplitter HorizontalAlignment="Stretch"
                      Width="2"
                      Grid.Column="3" />
        <GridSplitter HorizontalAlignment="Stretch"
                      Width="2"
                      Grid.Column="5" />

    </Grid>
</Window>
