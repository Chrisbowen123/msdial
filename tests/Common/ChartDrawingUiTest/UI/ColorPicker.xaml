<Page x:Class="ChartDrawingUiTest.UI.ColorPicker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="clr-namespace:CompMs.Graphics.UI;assembly=ChartDrawing"
      mc:Ignorable="d" 
      d:Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ColorPicker">
    <StackPanel VerticalAlignment="Center">
        <ui:HsvColorPicker x:Name="HsvColorPicker"
                           Width="200" Height="200"
                           Background="Gray"/>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <ui:ListColorPicker x:Name="ColorPickerControl"
                                SelectedColor="{Binding SelectedColor, ElementName=HsvColorPicker}"
                                Width="100"/>
            <TextBlock Text="{Binding SelectedColor, ElementName=ColorPickerControl}"
                       Background="Gray">
                <TextBlock.Foreground>
                    <SolidColorBrush Color="{Binding SelectedColor, ElementName=ColorPickerControl, FallbackValue=White}"/>
                </TextBlock.Foreground>   
            </TextBlock>
        </StackPanel>
    </StackPanel>
</Page>
