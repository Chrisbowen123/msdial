            <manager:ContinuousAxisManager x:Key="ChromAxis"
                                           MinValue="{Binding DataContext.FileVM.ChromMin, Source={x:Reference Name=MainControl}}"
                                           MaxValue="{Binding DataContext.FileVM.ChromMax, Source={x:Reference Name=MainControl}}"
                                           ChartMargin="0.05" />
            <manager:ContinuousAxisManager x:Key="MassAxis"
                                           MinValue="{Binding DataContext.FileVM.MassMin, Source={x:Reference Name=MainControl}}"
                                           MaxValue="{Binding DataContext.FileVM.MassMax, Source={x:Reference Name=MainControl}}"
                                           ChartMargin="0.05" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Name="Grid_MainWindow">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" MinWidth="150"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <local:Navigator Grid.Column="0"/>

            <Grid Name="Grid_DataViewer" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="370"/>
                    <ColumnDefinition Width="370" MinWidth="370" MaxWidth="730" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="200" />
                        <ColumnDefinition Width="*" MinWidth="200" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="15" />
                        <RowDefinition Height="220"/>
                        <RowDefinition Height="*" MinHeight="200" />
                    </Grid.RowDefinitions>

                    <local:PeakSpotNavigator Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"/>

                    <local:SurveyScanView DataContext="{Binding FileVM}"
                                          MassAxis="{StaticResource MassAxis}"
                                          Grid.Row="2" Grid.Column="0"/>

                    <TabControl Name="TabControl_PairwisePlotViewer" Grid.Row="2" Grid.Column="1" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                xmlns:pairplot="clr-namespace:CompMs.App.Msdial.View.PairwisePlot" >
                        <!--SelectionChanged="TabControl_PairwisePlotViewer_SelectionChanged"-->

                        <TabItem Header="Peak spot viewer" 
                                 Name="TabItem_RtMzPairwisePlotPeakView" 
                                 Height="25"
                                 Background="LightSteelBlue">
                            <pairplot:PeakView DataContext="{Binding FileVM}"
                                               ChromAxis="{StaticResource ChromAxis}" MassAxis="{StaticResource MassAxis}"/>
                        </TabItem>

                        <TabItem Header="Alignment spot viewer" 
                                 Name="TabItem_RtMzPairwisePlotAlignmentView" 
                                 Height="25"
                                 Background="LightSteelBlue">
                            <pairplot:AlignmentView />
                        </TabItem>

                    </TabControl>

                    <TabControl Name="TabControl_EicViewAndBarChart"
                                xmlns:eic="clr-namespace:CompMs.App.Msdial.View.EicAndBar"
                                Margin="0,-1,0,0"
                                Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" >

                        <TabItem Header="EIC of focused spot" 
                                 Height="26"
                                 Name="TabItem_EicViewer" Background="LightSteelBlue">
                            <eic:EicView DataContext="{Binding FileVM}"
                                         ChromAxis="{StaticResource ChromAxis}"/>
                        </TabItem>

                        <TabItem Header="Bar chart of aligned spot" 
                                 Name="TabItem_BarChartViewer" 
                                 Height="26"
                                 Background="LightSteelBlue">
                            <eic:BarChartView/>
                        </TabItem>

                        <TabItem Header="EIC of aligned spot" Name="TabItem_AlignedEic" Background="LightSteelBlue">
                            <eic:AlignmentEicView />
                        </TabItem>

                    </TabControl>

                    <Grid Grid.Row="2" Grid.Column="1">

                        <Button Name="Button_TableViewer" Height="25" 
                                Width="110" Margin="0,2,0,0" 
                                HorizontalContentAlignment="Right"
                                Background="AliceBlue"
                                VerticalAlignment="Top" HorizontalAlignment="Right">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/Table.png"/>
                                    <TextBlock Text=" Show ion table " VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </Grid>

                    <GridSplitter Margin="0, 0, 0, 0" 
                                  Width="2" 
                                  ResizeDirection="Columns" 
                                  Grid.Column="1" Grid.RowSpan="3" 
                                  VerticalAlignment="Stretch" HorizontalAlignment="Left" />

                    <GridSplitter Margin="0,0,0,-2" 
                                  Height="2" ResizeDirection="Rows" ResizeBehavior="CurrentAndNext" 
                                  Grid.ColumnSpan="2" 
                                  VerticalAlignment="Bottom" 
                                  HorizontalAlignment="Stretch" 
                                  Grid.Row="1" />

                </Grid>

                <Grid Grid.Column="1">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" MinHeight="235" />
                        <RowDefinition Height="*" MinHeight="300" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">

                        <TabControl Name="TabControl_PeakCharacter"
                                    xmlns:detail="clr-namespace:CompMs.App.Msdial.View.Details"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                    Grid.Row="0">

                            <TabItem Header="Basic peak property" 
                                 Name="TabItem_BasicProperty" 
                                 Height="25"
                                 Background="LightSteelBlue">
                                <detail:PeakPropertyView DataContext="{Binding FileVM.Target}"/>
                            </TabItem>

                            <TabItem Header="Compound detail" 
                                 Name="TabItem_CompoundDetail" 
                                 Height="25"
                                 Background="LightSteelBlue">
                                <detail:CompoundDetailView DataContext="{Binding FileVM.Target}"/>
                            </TabItem>
                         
                        </TabControl>

                    </Grid>

                    <TabControl Name="TabControl_MS2Viewer"
                                xmlns:ms2="clr-namespace:CompMs.App.Msdial.View.MS2"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                Grid.Row="1" >
                        <!--SelectionChanged="TabControl_MS2Viewer_SelectionChanged" -->

                        <TabItem Header="Exp. vs. Ref." 
                                 Name="TabItem_MeasurementVsReference" 
                                 Height="25"
                                 Background="LightSteelBlue">
                            <ms2:ExpRefView DataContext="{Binding FileVM}"/>
                        </TabItem>

                        <TabItem Header="MS2 Chrom." 
                                 Name="TabItem_MS2Chromatogram" 
                                 Height="25"
                                 Background="LightSteelBlue">
                            <ms2:ChromatogramView />
                        </TabItem>

                        <TabItem Header="Raw vs. Purified" 
                                 Name="TabItem_RawVsDeconvolution" 
                                 Height="25"
                                 Background="LightSteelBlue">

                            <ms2:RawPurifiedView DataContext="{Binding FileVM}"/>
                        </TabItem>

                        <TabItem Header="Rep. vs. Ref." 
                                 Height="25"
                                 Background="LightSteelBlue" 
                                 Name="TabItem_RepresentativeVsReference">
                            <ms2:RepRefView />
                        </TabItem>

                    </TabControl>

                    <GridSplitter Margin="0, 0, 0, -2" Height="2" 
                                  ResizeDirection="Rows"
                                  ResizeBehavior="CurrentAndNext" 
                                  Grid.Row="0" VerticalAlignment="Bottom" 
                                  HorizontalAlignment="Stretch" />

                </Grid>
                <GridSplitter Margin="0, 0, 0, 0" Width="2" 
                              ResizeDirection="Columns" 
                              Grid.Column="1" Grid.RowSpan="2" 
                              VerticalAlignment="Stretch" 
                              HorizontalAlignment="Left" />

            </Grid>

            <GridSplitter Margin="0, 0, 0, 0" Width="2" ResizeDirection="Columns" Grid.Column="0" Grid.RowSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Right" />
        </Grid>
        <local:Footer DataContext="{Binding FileVM}"
                      ChromAxis="{StaticResource ChromAxis}" MassAxis="{StaticResource MassAxis}"
                      Grid.Row="1"/>

        <GridSplitter Margin="0,0,0,0" 
                    Height="2" ResizeDirection="Rows" ResizeBehavior="CurrentAndNext" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Stretch" 
                    Grid.Row="0" />
    </Grid>
</UserControl>
