<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CompMs.App.Msdial.View.Imms"
                    xmlns:vm="clr-namespace:CompMs.App.Msdial.ViewModel"
                    xmlns:localVM="clr-namespace:CompMs.App.Msdial.ViewModel.Imms"
                    xmlns:ui="clr-namespace:CompMs.Graphics.UI;assembly=ChartDrawing">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/View/Setting/AnnotationSettingStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <DataTemplate DataType="{x:Type localVM:ImmsAnnotationSettingViewModel}">
        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <Grid Margin="8,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Database path:" VerticalAlignment="Center" Grid.Column="0"/>
                        <TextBox Text="{Binding DataBasePath.Value, UpdateSourceTrigger=PropertyChanged}"
                                 HorizontalContentAlignment="Left"
                                 Margin="8" Grid.Column="1"/>
                        <Button Content="Browse"
                                Command="{Binding BrowseCommand, Mode=OneTime}"
                                Width="64" Height="24" Grid.Column="2"/>
                    </Grid>
                    <ui:LabeledContent PrependLabel="Database name">
                        <TextBox Text="{Binding DataBaseID.Value, UpdateSourceTrigger=PropertyChanged}"
                                 HorizontalContentAlignment="Left"/>
                    </ui:LabeledContent>
                    <ui:LabeledContent PrependLabel="Database type">
                        <ComboBox ItemsSource="{Binding DBSources, Mode=OneTime}" SelectedItem="{Binding DBSource.Value}"/>
                    </ui:LabeledContent>
                </StackPanel>

                <ContentControl Content="{Binding Implement.Value}"
                                Margin="0,8" Grid.Row="1"/>
            </Grid>
        </ScrollViewer>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:MsRefSearchParameterBaseViewModel}"
                  x:Key="ToleranceSettingWithMs2ForImms">
        <StackPanel>
            <ui:LabeledContent PrependLabel="Accurate mass tolerance (MS1):"
                               AppendLabel="Da">
                <TextBox Text="{Binding Ms1Tolerance.Value}"/>
            </ui:LabeledContent>
            <ui:LabeledContent PrependLabel="Accurate mass tolerance (MS2):"
                               AppendLabel="Da">
                <TextBox Text="{Binding Ms2Tolerance.Value}"/>
            </ui:LabeledContent>
            <ui:LabeledContent PrependLabel="Collision cross section tolerance:"
                               AppendLabel="">
                <TextBox Text="{Binding CcsTolerance.Value}"/>
            </ui:LabeledContent>
        </StackPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:MsRefSearchParameterBaseViewModel}"
                  x:Key="ToleranceSettingForImms">
        <StackPanel>
            <ui:LabeledContent PrependLabel="Accurate mass tolerance (MS1):"
                               AppendLabel="Da">
                <TextBox Text="{Binding Ms1Tolerance.Value}"/>
            </ui:LabeledContent>
            <ui:LabeledContent PrependLabel="Collision cross section tolerance:"
                               AppendLabel="">
                <TextBox Text="{Binding CcsTolerance.Value}"/>
            </ui:LabeledContent>
        </StackPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:MsRefSearchParameterBaseViewModel}"
                  x:Key="CcsSetting">
        <StackPanel>
            <ui:LabeledContent PrependLabel="Use collision cross section for scoring">
                <CheckBox IsChecked="{Binding IsUseCcsForAnnotationScoring.Value}"/>
            </ui:LabeledContent>
            <ui:LabeledContent PrependLabel="Use collision cross section for filtering">
                <CheckBox IsChecked="{Binding IsUseCcsForAnnotationFiltering.Value}"/>
            </ui:LabeledContent>
        </StackPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type localVM:ImmsLbmAnnotationSettingViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Lipid database and MS/MS identification setting"
                       FontStyle="Italic"
                       VerticalAlignment="Center"
                       Grid.Row="0"/>
            <StackPanel Margin="8" Grid.Row="1">
                <ui:LabeledContent PrependLabel="Lipid database:">
                    <Button Content="Set"
                            Command="{Binding LipidDBSetCommand, Mode=OneTime}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Width="64"/>
                </ui:LabeledContent>
                <ContentControl Content="{Binding ParameterVM}"
                                ContentTemplate="{StaticResource ToleranceSettingWithMs2ForImms}"
                                Grid.Row="1"/>
            </StackPanel>

            <Expander Header="MS2 spectrum cut off" Margin="0,8"
                      Grid.Row="2">
                <ContentControl Content="{Binding ParameterVM}"
                                ContentTemplate="{StaticResource Ms2Setting}"
                                Margin="8"/>
            </Expander>

            <Expander Header="Annotaion cut off" Margin="0,8"
                      Grid.Row="3">
                <ContentControl Content="{Binding ParameterVM}"
                                ContentTemplate="{StaticResource Ms2ScoreCutOffSetting}"
                                Margin="8"/>
            </Expander>

            <Expander Header="Ccs setting" Margin="0,8"
                      Grid.Row="4">
                <ContentControl Content="{Binding ParameterVM}"
                                ContentTemplate="{StaticResource CcsSetting}"
                                Margin="8"/>
            </Expander>
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type localVM:ImmsMspAnnotationSettingViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Lipid database and MS/MS identification setting"
                       FontStyle="Italic"
                       VerticalAlignment="Center"
                       Grid.Row="0"/>
            <ContentControl Content="{Binding ParameterVM}"
                            ContentTemplate="{StaticResource ToleranceSettingWithMs2ForImms}"
                            Margin="8" Grid.Row="1"/>

            <Expander Header="MS2 spectrum cut off" Margin="0,8"
                      Grid.Row="2">
                <ContentControl Content="{Binding ParameterVM}"
                                ContentTemplate="{StaticResource Ms2Setting}"
                                Margin="8"/>
            </Expander>

            <Expander Header="Annotaion cut off" Margin="0,8"
                      Grid.Row="3">
                <ContentControl Content="{Binding ParameterVM}"
                                ContentTemplate="{StaticResource Ms2ScoreCutOffSetting}"
                                Margin="8"/>
            </Expander>

            <Expander Header="Ccs setting" Margin="0,8"
                      Grid.Row="4">
                <ContentControl Content="{Binding ParameterVM}"
                                ContentTemplate="{StaticResource CcsSetting}"
                                Margin="8"/>
            </Expander>
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type localVM:ImmsTextDBAnnotationSettingViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Tolerance" Grid.Row="0"/>
            <ContentControl Content="{Binding ParameterVM}"
                            ContentTemplate="{StaticResource ToleranceSettingForImms}"
                            Margin="8" Grid.Row="1"/>

            <Expander Header="Ccs setting" Margin="0,8"
                      Grid.Row="2">
                <ContentControl Content="{Binding ParameterVM}"
                                ContentTemplate="{StaticResource CcsSetting}"
                                Margin="8"/>
            </Expander>
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:CompoundSearchVM}"
                  x:Key="ImmsAnnotatorSetting">
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="Mass tolerance"/>
                <ContentControl Content="{Binding ParameterVM.Value}"
                                ContentTemplate="{StaticResource ToleranceSettingForImms}"/>
                <TextBlock Text="Ccs setting"/>
                <ContentControl Content="{Binding ParameterVM.Value}"
                                ContentTemplate="{StaticResource CcsSetting}"/>
            </StackPanel>
        </ScrollViewer>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:CompoundSearchVM}"
                  x:Key="ImmsAnnotatorSettingWithMs2">
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="Mass tolerance"/>
                <ContentControl Content="{Binding ParameterVM.Value}"
                                ContentTemplate="{StaticResource ToleranceSettingWithMs2ForImms}"/>
                <TextBlock Text="MS2 spectrum cut off"/>
                <ContentControl Content="{Binding ParameterVM.Value}"
                                ContentTemplate="{StaticResource Ms2Setting}"/>
                <TextBlock Text="Ccs setting"/>
                <ContentControl Content="{Binding ParameterVM.Value}"
                                ContentTemplate="{StaticResource CcsSetting}"/>
            </StackPanel>
        </ScrollViewer>
    </DataTemplate>
</ResourceDictionary>