                <GroupBox Header="Protein Groups">
                <DataGrid x:Name="CustomerGrid" Margin="8" ItemsSource="{Binding Groups}" IsSynchronizedWithCurrentItem="True" AlternatingRowBackground="LightBlue" AlternationCount="2" />
                    
                </GroupBox>
            <!--</TabItem>
