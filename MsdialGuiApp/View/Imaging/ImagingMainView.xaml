<UserControl x:Class="CompMs.App.Msdial.View.Imaging.ImagingMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:chart="clr-namespace:CompMs.App.Msdial.View.Chart"
             xmlns:info="clr-namespace:CompMs.App.Msdial.View.Information"
             xmlns:local="clr-namespace:CompMs.App.Msdial.View.Imaging"
             xmlns:vm="clr-namespace:CompMs.App.Msdial.ViewModel.Imaging"
             xmlns:chartvm="clr-namespace:CompMs.App.Msdial.ViewModel.Chart"
             xmlns:infovm="clr-namespace:CompMs.App.Msdial.ViewModel.Information"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type={x:Type vm:ImagingMainViewModel}}"
             d:Background="White"
             d:DesignHeight="780" d:DesignWidth="1280">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:ImagingMainViewModel}" x:Key="ImageSelector">
            <DataTemplate.Resources>
                <DataTemplate DataType="{x:Type vm:ImagingRoiViewModel}">
                    <TextBlock Text="{Binding Id}"/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ImagingImageViewModel}">
                    <Expander BorderThickness="0"
                              IsExpanded="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}">
                        <Expander.Header>
                            <Run Text="{Binding ImageTitle, Mode=OneWay}"/>
                        </Expander.Header>
                        <ListBox ItemsSource="{Binding RoiViewModels}"
                                 SelectedItem="{Binding SelectedRoiViewModel}"
                                 IsSynchronizedWithCurrentItem="True"/>
                    </Expander>
                </DataTemplate>
            </DataTemplate.Resources>
            <GroupBox Header="Images" BorderThickness="0">
                <GroupBox.Template>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Border Background="{StaticResource MainThemeColor}"
                                    BorderBrush="Black"
                                    BorderThickness=".5"
                                    HorizontalAlignment="Stretch"
                                    Grid.Row="0">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  RecognizesAccessKey="True"/>
                            </Border>
                            <ContentPresenter Grid.Row="1"/>
                        </Grid>
                    </ControlTemplate>
                </GroupBox.Template>
                <ListBox ItemsSource="{Binding ImageViewModels}"
                         SelectedItem="{Binding SelectedImageViewModel}"
                         IsSynchronizedWithCurrentItem="True">
                </ListBox>
            </GroupBox>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <local:ImmsImagingRibbon Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3"/>

        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ContentControl Content="{Binding}"
                            ContentTemplate="{StaticResource ImageSelector}"
                            Grid.Row="0"/>
            <ContentControl Content="{Binding RoiCompareViewModels}"
                            Grid.Row="1"/>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                <ComboBox ItemsSource="{Binding SelectedImageViewModel.SelectedRoiViewModel.Intensities}"
                          SelectedItem="{Binding SelectedImageViewModel.SelectedRoiViewModel.SelectedPeakIntensities.Value}"
                          IsSynchronizedWithCurrentItem="True"
                          DisplayMemberPath="Title"
                          DockPanel.Dock="Top"/>
                <chart:BitmapImageView DataContext="{Binding SelectedImageViewModel.SelectedRoiViewModel.Intensities/BitmapImageViewModel}"/>
            </DockPanel>
            <chart:PeakView DataContext="{Binding SelectedImageViewModel.ImageResultViewModel.PeakPlotViewModel}"
                            Grid.Row="1" Grid.Column="1"/>
            <chart:BarChartView DataContext="{Binding SelectedRoiCompareViewModel.BarChartViewModel}"
                                Grid.Row="1" Grid.Column="0"/>
            <GridSplitter Height="2" Foreground="Gray"
                          VerticalAlignment="Top" HorizontalAlignment="Stretch"
                          Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>
        </Grid>

        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TabControl ItemsSource="{Binding SelectedImageViewModel.PeakDetailViewModels}"
                        Grid.Row="0">
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <DataTemplate.Resources>
                            <DataTemplate DataType="{x:Type infovm:PeakInformationViewModel}">
                                <info:PeakInformationView/>
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type infovm:CompoundDetailViewModel}">
                                <info:CompoundDetailView/>
                            </DataTemplate>
                        </DataTemplate.Resources>
                        <ContentPresenter Content="{Binding}"/>
                    </DataTemplate>
                </TabControl.ContentTemplate>
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <DataTemplate.Resources>
                            <DataTemplate DataType="{x:Type infovm:PeakInformationViewModel}">
                                <TextBlock>Peak information</TextBlock>
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type infovm:CompoundDetailViewModel}">
                                <TextBlock>Compound information</TextBlock>
                            </DataTemplate>
                        </DataTemplate.Resources>
                        <ContentPresenter Content="{Binding}"/>
                    </DataTemplate>
                </TabControl.ItemTemplate>
            </TabControl>
            <TabControl ItemsSource="{Binding SelectedImageViewModel.Ms2ViewModels}"
                        Grid.Row="1">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <DataTemplate.Resources>
                            <DataTemplate DataType="{x:Type chartvm:RawDecSpectrumsViewModel}">
                                <TextBlock>Exp. vs. Ref.</TextBlock>
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type chartvm:RawPurifiedSpectrumsViewModel}">
                                <TextBlock>Raw vs. Purified</TextBlock>
                            </DataTemplate>
                        </DataTemplate.Resources>
                        <ContentPresenter Content="{Binding}"/>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <DataTemplate.Resources>
                            <DataTemplate DataType="{x:Type chartvm:RawDecSpectrumsViewModel}">
                                <chart:ExpRefView/>
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type chartvm:RawPurifiedSpectrumsViewModel}">
                                <chart:RawPurifiedView/>
                            </DataTemplate>
                        </DataTemplate.Resources>
                        <ContentPresenter Content="{Binding}"/>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
            <GridSplitter HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Foreground="Gray"
                          Height="1"
                          Grid.Row="1"/>
        </Grid>
    </Grid>
</UserControl>
