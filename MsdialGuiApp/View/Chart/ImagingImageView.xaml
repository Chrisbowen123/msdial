<UserControl x:Class="CompMs.App.Msdial.View.Chart.ImagingImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:chart="clr-namespace:CompMs.Graphics.Chart;assembly=ChartDrawing"
             xmlns:behavior="clr-namespace:CompMs.Graphics.Behavior;assembly=ChartDrawing"
             xmlns:vm="clr-namespace:CompMs.App.Msdial.ViewModel.Chart"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type vm:ImagingImageViewModel}}"
             d:Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <chart:HeatmapControl ItemsSource="{Binding ImagePixels, Mode=OneWay}"
                              DataType="{x:Type vm:ImagePixel}"
                              HorizontalAxis="{Binding HorizontalAxis, Mode=OneWay}"
                              VerticalAxis="{Binding VerticalAxis, Mode=OneWay}"
                              HorizontalPropertyName="X"
                              VerticalPropertyName="Y"
                              DegreePropertyName="Intensity"
                              GradientStops="{Binding GradientStops, Mode=OneWay}"
                              behavior:MoveByDragBehavior.IsEnabled="True"
                              behavior:ZoomByDragBehavior.IsEnabled="True"
                              behavior:ZoomByWheelBehavior.IsEnabled="True"
                              behavior:ResetRangeByDoubleClickBehavior.IsEnabled="True"/>
    </Grid>
</UserControl>
