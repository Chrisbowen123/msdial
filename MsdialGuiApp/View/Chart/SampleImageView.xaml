<UserControl x:Class="CompMs.App.Msdial.View.Chart.SampleImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:chart="clr-namespace:CompMs.Graphics.Chart;assembly=ChartDrawing"
             xmlns:behavior="clr-namespace:CompMs.Graphics.Behavior;assembly=ChartDrawing"
             xmlns:m="clr-namespace:CompMs.App.Msdial.Model.Chart"
             xmlns:vm="clr-namespace:CompMs.App.Msdial.ViewModel.Chart"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type vm:SampleImageViewModel}}"
             d:Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <chart:SimpleChartControl HorizontalAxis="{Binding HorizontalAxis, Mode=OneWay}"
                                  VerticalAxis="{Binding VerticalAxis, Mode=OneWay}">
            <chart:HeatmapControl ItemsSource="{Binding ImagePixels, Mode=OneWay}"
                                  DataType="{x:Type m:ImagePixel}"
                                  HorizontalAxis="{Binding HorizontalAxis, Mode=OneWay}"
                                  VerticalAxis="{Binding VerticalAxis, Mode=OneWay}"
                                  HorizontalPropertyName="X"
                                  VerticalPropertyName="Y"
                                  DegreePropertyName="Intensity"
                                  GradientBrush="{Binding GradientBrushMapper, Mode=OneWay}"
                                  PatchWidth="{Binding PatchWidth}"
                                  PatchHeight="{Binding PatchHeight}"
                                  behavior:MoveByDragBehavior.IsEnabled="True"
                                  behavior:ZoomByDragBehavior.IsEnabled="True"
                                  behavior:ZoomByWheelBehavior.IsEnabled="True"
                                  behavior:ResetRangeByDoubleClickBehavior.IsEnabled="True"/>
        </chart:SimpleChartControl>
    </Grid>
</UserControl>
