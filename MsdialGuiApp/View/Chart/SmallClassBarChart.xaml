<UserControl x:Class="CompMs.App.Msdial.View.Chart.SmallClassBarChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompMs.App.Msdial.View.Chart"
             xmlns:bar="clr-namespace:CompMs.Graphics.Chart;assembly=ChartDrawing"
             xmlns:manager="clr-namespace:CompMs.Graphics.AxisManager;assembly=ChartDrawing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="WhiteSmoke"
            BorderThickness="1,0,0,1">
        <bar:BarControl ItemsSource="{Binding}"
                        HorizontalPropertyName="Class"
                        VerticalPropertyName="Height">
            <bar:BarControl.HorizontalAxis>
                <manager:CategoryAxisManager ItemsSource="{Binding}"
                                             IdentityPropertyName="Class"
                                             DisplayPropertyName="Class"/>
            </bar:BarControl.HorizontalAxis>
            <bar:BarControl.VerticalAxis>
                <manager:AutoContinuousAxisManager ItemsSource="{Binding}"
                                                   ValuePropertyName="Height"
                                                   Bounds="0,0"
                                                   ChartMargin="0,0.10"/>
            </bar:BarControl.VerticalAxis>
            <bar:BarControl.ToolTip>
                <ToolTip DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding FocusedItem.Class, StringFormat=Class: {0}}"/>
                        <TextBlock Text="{Binding FocusedItem.Height, StringFormat=Height: {0}}"
                                   Margin="4,0,0,0"/>
                    </StackPanel>
                </ToolTip>
            </bar:BarControl.ToolTip>
        </bar:BarControl>
    </Border>
</UserControl>
