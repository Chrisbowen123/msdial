        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Name="Grid_MainWindow">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" MinWidth="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:MainRibbon x:Name="RibbonMenu" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
        <commonview:Navigator Grid.Row="1" Grid.Column="0" Grid.RowSpan="2"/>

        <GridSplitter Margin="0, 0, 0, 0" Width="2"
                      ResizeDirection="Columns"
                      VerticalAlignment="Stretch" HorizontalAlignment="Right"
                      Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"/>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid Name="Grid_DataViewer">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="370"/>
                    <ColumnDefinition Width="370" MinWidth="370" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="15" />
                        <RowDefinition Height="220"/>
                        <RowDefinition Height="*" MinHeight="200" />
                    </Grid.RowDefinitions>

                    <TabControl Name="TabControl_PairwisePlotViewer"
                                SelectedIndex="0"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                Grid.Row="2" SelectionChanged="TabControl_PairwisePlotViewer_SelectionChanged" >
                        <TabControl.ItemContainerStyle>
                            <Style TargetType="TabItem">
                                <Setter Property="Height" Value="25"/>
                                <Setter Property="Background" Value="{StaticResource MainThemeColor}"/>
                            </Style>
                        </TabControl.ItemContainerStyle>

                        <TabItem Name="TabItem_RtMzPairwisePlotPeakView"
                                 Header="Peak spot viewer" 
                                 DataContext="{Binding AnalysisViewModel.Value}"
                                 DataContextChanged="TabItem_RtMzPairwisePlotPeakView_DataContextChanged">
                            <chart:PeakView DataContext="{Binding PlotViewModel}">
                                <chart:PeakView.LabelTemplate>
                                    <DataTemplate DataType="{x:Type do:ChromatogramPeakFeatureModel}">
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="9"/>
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </Style>
                                            </StackPanel.Resources>
                                            <TextBlock Text="{Binding InnerModel.MasterPeakID, Mode=OneTime, StringFormat=Spot ID: {0}; }"/>
                                            <TextBlock Text="{Binding InnerModel.MS1RawSpectrumIdTop, Mode=OneTime, StringFormat=Scan #: {0}; }"/>
                                            <TextBlock Text="{Binding InnerModel.Mass, Mode=OneTime, StringFormat=Mass[Da]: {0:N5};}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </chart:PeakView.LabelTemplate>
                            </chart:PeakView>
                        </TabItem>

                        <TabItem Name="TabItem_RtMzPairwisePlotAlignmentView"
                                 Header="Alignment spot viewer" 
                                 DataContext="{Binding AlignmentViewModel.Value}" DataContextChanged="TabItem_RtMzPairwisePlotAlignmentView_DataContextChanged">

                            <chart:AlignmentPeakPlotView DataContext="{Binding PlotViewModel}"
                                                         Focusable="True"
                                                         behavior:ObserveKeyboardFocusBehavior.ObserveAction="{Binding Focus, Mode=OneWay}">
                                <chart:AlignmentPeakPlotView.LabelTemplate>
                                    <DataTemplate DataType="{x:Type do:AlignmentSpotPropertyModel}">
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="9"/>
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </Style>
                                            </StackPanel.Resources>
                                            <TextBlock Text="ID #: "/>
                                            <TextBlock Text="{Binding AlignmentID, Mode=OneTime}"/>
                                            <TextBlock Text="; "/>
                                            <TextBlock Text="Mass[Da]: "/>
                                            <TextBlock Text="{Binding MassCenter, StringFormat=N5, Mode=OneTime}"/>
                                            <TextBlock Text=";"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </chart:AlignmentPeakPlotView.LabelTemplate>
                            </chart:AlignmentPeakPlotView>
                        </TabItem>

                    </TabControl>

                    <TabControl Name="TabControl_EicViewAndBarChart"
                                Margin="0,-1,0,0"
                                Grid.Row="0" Grid.RowSpan="2" >

                        <TabItem Header="EIC of focused spot" 
                                 Height="26"
                                 Name="TabItem_EicViewer" Background="{StaticResource MainThemeColor}">
                            <chart:EicView DataContext="{Binding AnalysisViewModel.Value.EicViewModel}"/>
                        </TabItem>

                        <TabItem Header="Bar chart of aligned spot" 
                                 Name="TabItem_BarChartViewer" 
                                 Height="26"
                                 Background="{StaticResource MainThemeColor}">
                            <chart:BarChartView DataContext="{Binding AlignmentViewModel.Value.BarChartViewModel}"/>
                        </TabItem>


                        <TabItem Header="EIC of aligned spot" Name="TabItem_AlignedEic" Background="{StaticResource MainThemeColor}">
                            <chart:AlignmentEicView DataContext="{Binding AlignmentViewModel.Value.AlignmentEicViewModel}"/>
                        </TabItem>

                    </TabControl>

                    <Grid Grid.Row="2">

                        <Button Name="Button_TableViewer"
                                DataContext="{Binding SelectedItem.DataContext, ElementName=TabControl_PairwisePlotViewer, Mode=OneWay}"
                                Command="{Binding ShowIonTableCommand, Mode=OneWay}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                HorizontalContentAlignment="Right"
                                Background="AliceBlue"
                                VerticalAlignment="Top" HorizontalAlignment="Right"
                                Margin="0,2,0,0" 
                                Height="25" Width="110">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/Table.png"/>
                                    <TextBlock Text=" Show ion table " VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </Grid>

                    <GridSplitter Margin="0,0,0,-2" 
                                  Height="2" ResizeDirection="Rows" ResizeBehavior="CurrentAndNext" 
                                  Grid.ColumnSpan="2" 
                                  VerticalAlignment="Bottom" 
                                  HorizontalAlignment="Stretch" 
                                  Grid.Row="1" />

                </Grid>

                <Grid Grid.Column="1">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" MinHeight="235" />
                        <RowDefinition Height="*" MinHeight="300" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">

                        <TabControl Name="TabControl_PeakCharacter"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                    DataContext="{Binding SelectedItem.DataContext, ElementName=TabControl_PairwisePlotViewer, Mode=OneWay}"
                                    Grid.Row="0">

                            <TabItem Header="Basic peak property" 
                                 Name="TabItem_BasicProperty" 
                                 Height="25"
                                 Background="{StaticResource MainThemeColor}">
                                <local:PeakPropertyView DataContext="{Binding Model.Target.Value, Mode=OneWay}"/>
                            </TabItem>

                            <TabItem Header="Compound detail" 
                                 Name="TabItem_CompoundDetail" 
                                 Height="25"
                                 Background="{StaticResource MainThemeColor}">
                                <local:CompoundDetailView DataContext="{Binding Model.Target.Value, Mode=OneWay}"/>
                            </TabItem>
                         
                        </TabControl>

                    </Grid>

                    <TabControl Name="TabControl_MS2Viewer"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                Grid.Row="1" >

                        <TabItem Name="TabItem_MeasurementVsReference" 
                                 Header="Exp. vs. Ref." 
                                 DataContext="{Binding AnalysisViewModel.Value}"
                                 Background="{StaticResource MainThemeColor}"
                                 Height="25">
                            <chart:ExpRefView>
                                <chart:ExpRefView.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Copy spectra as.." Command="{Binding CopyMs2SpectrumCommand, Mode=OneTime}">
                                            <MenuItem Header="Copy spectra as msp" Command="{Binding CopyMs2SpectrumCommand, Mode=OneTime}"/>
                                        </MenuItem>
                                        <MenuItem Header="Save spectra table as.." Command="{Binding SaveMs2SpectrumCommand}" />
                                    </ContextMenu>
                                </chart:ExpRefView.ContextMenu>
                            </chart:ExpRefView>
                        </TabItem>

                        <TabItem Name="TabItem_RepresentativeVsReference"
                                 Header="Rep. vs. Ref." 
                                 DataContext="{Binding AlignmentViewModel.Value}"
                                 Background="{StaticResource MainThemeColor}" 
                                 Height="25">
                            <chart:RepRefView>
                                <chart:RepRefView.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Copy spectra as.." Command="{Binding CopyMs2SpectrumCommand, Mode=OneTime}">
                                            <MenuItem Header="Copy spectra as msp" Command="{Binding CopyMs2SpectrumCommand, Mode=OneTime}"/>
                                        </MenuItem>
                                        <MenuItem Header="Save spectra table as.." Command="{Binding SaveMs2SpectrumCommand}" />
                                    </ContextMenu>
                                </chart:RepRefView.ContextMenu>
                            </chart:RepRefView>
                        </TabItem>

                    </TabControl>

                    <GridSplitter Margin="0, 0, 0, -2" Height="2" 
                                  ResizeDirection="Rows"
                                  ResizeBehavior="CurrentAndNext" 
                                  Grid.Row="0" VerticalAlignment="Bottom" 
                                  HorizontalAlignment="Stretch" />

                </Grid>

                <GridSplitter Margin="0, 0, 0, 0" Width="2" 
                              ResizeDirection="Columns" 
                              Grid.Column="1" Grid.RowSpan="2" 
                              VerticalAlignment="Stretch" 
                              HorizontalAlignment="Left" />

            </Grid>
        </Grid>
        <local:Footer DataContext="{Binding AnalysisViewModel.Value}"
                      IsEnabled="False"
                      Grid.Row="2" Grid.Column="1"/>

        <GridSplitter Margin="0,0,0,0" 
                    Height="2" ResizeDirection="Rows" ResizeBehavior="CurrentAndNext" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Stretch" 
                    Grid.Row="1" Grid.Column="1"/>
    </Grid>
</UserControl>
