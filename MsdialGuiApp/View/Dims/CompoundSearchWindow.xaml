<Window x:Class="CompMs.App.Msdial.View.Dims.CompoundSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
        xmlns:local="clr-namespace:CompMs.App.Msdial.View.Dims"
        xmlns:vm="clr-namespace:CompMs.App.Msdial.ViewModel.Dims"
        xmlns:manager="clr-namespace:CompMs.Graphics.AxisManager;assembly=ChartDrawing"
        xmlns:spectrum="clr-namespace:CompMs.Graphics.LineSpectrum;assembly=ChartDrawing"
        xmlns:axis="clr-namespace:CompMs.Graphics.GraphAxis;assembly=ChartDrawing"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type={x:Type vm:CompoundSearchVM}}"
        Name="CompoundSearch"
        Title="Compound search" Height="720" Width="1280">
    <Window.Resources>
        <manager:AutoContinuousAxisManager x:Key="MassAxisManager"
                                           ItemsSource="{Binding DataContext.Ms2DecSpectrum, Source={x:Reference Name=CompoundSearch}}"
                                           ValuePropertyName="Mass"
                                           Bounds="0,0"
                                           ChartMargin="0.05"/>
        <manager:AutoContinuousAxisManager x:Key="MeasureIntensityAxisManager"
                                           ItemsSource="{Binding DataContext.Ms2DecSpectrum, Source={x:Reference Name=CompoundSearch}}"
                                           ValuePropertyName="Intensity"
                                           Bounds="0,0"
                                           ChartMargin="0,0.5" />
        <manager:AutoContinuousAxisManager x:Key="ReferenceIntensityAxisManager"
                                           ItemsSource="{Binding DataContext.Compounds/Spectrum, Source={x:Reference Name=CompoundSearch}}"
                                           ValuePropertyName="Intensity"
                                           Bounds="0,0"
                                           ChartMargin="0,0.5"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <Label Content="Selected library ID:"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Label Name="Label_SelectedLibraryID"
                       Content="{Binding Compounds/LibraryID}"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Label Content="MS1 tol. [Da]:"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox Name="TextBox_Ms1Tolerance"
                         Text="{Binding Ms1Tolerance, Mode=TwoWay}"
                         HorizontalAlignment="Left" VerticalAlignment="Center"
                         Width="70" Height="25" />
                <Label Content="MS2 tol. [Da]:"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
                <TextBox Name="TextBox_Ms2Tolerance"
                         Text=""
                         IsEnabled="False"
                         HorizontalAlignment="Left" VerticalAlignment="Center"
                         Width="70" Height="25" />

                <Button Name="Button_ReAnalysis"
                        Content="Search"
                        Command="{Binding SearchCommand, Mode=OneTime}"
                        Width="75" Height="25"
                        HorizontalAlignment="Left" VerticalAlignment="Center"
                        Margin="30,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="10,10"
                        Grid.Row="2">
                <StackPanel.Resources>
                    <Style TargetType="Label">
                        <Setter Property="Width" Value="120"/>
                        <Setter Property="Height" Value="25"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5,2,0,0"/>
                    </Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Height" Value="25"/>
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Foreground" Value="Black" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="IsReadOnly" Value="True" />
                        <Setter Property="Margin" Value="0,2,0,0"/>
                    </Style>
                </StackPanel.Resources>

                <StackPanel>
                    <TextBlock Text="File infomation" FontStyle="Italic"
                               HorizontalAlignment="Left"/>
                    <Separator />

                    <StackPanel Orientation="Horizontal">
                        <Label Content="File ID:"/>
                        <TextBox Text="{Binding FileID, Mode=OneWay}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="File name:"/>
                        <TextBox Text="{Binding FileName, Mode=OneWay}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="25,0,0,0">
                    <TextBlock Text="Peak infomation" FontStyle="Italic"
                               HorizontalAlignment="Left"/>
                    <Separator />

                    <StackPanel Orientation="Horizontal">
                        <Label Content="Accurate mass:"/>
                        <TextBox Text="{Binding AccurateMass, Mode=OneWay}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="MolecularSpecies:"/>
                        <TextBox Text="{Binding AdductName, Mode=OneWay}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Identified:"/>
                        <TextBox Text="{Binding MetaboliteName, Mode=OneWay}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <Label Content="Library information" FontStyle="Italic"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="5,0,0,0"
                   Grid.Row="3" />
            <DataGrid Name="DataGrid_LibraryInformation"
                      ItemsSource="{Binding Path=Compounds}"
                      IsSynchronizedWithCurrentItem="True"
                      CanUserAddRows="False" CanUserDeleteRows="False"
                      CanUserReorderColumns="False" CanUserSortColumns="True"
                      SelectionUnit="FullRow" IsReadOnly="True"
                      HeadersVisibility="All" AutoGenerateColumns="False"
                      Margin="5,30,10,10"
                      Grid.Row="3" >
                      <!--SelectionChanged="DataGrid_LibraryInformation_SelectionChanged"-->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader" >
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Library ID" Width="*" Binding="{Binding Path=LibraryID}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Name" Width="2*" Binding="{Binding Path=Name}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Adduct" Width="*" Binding="{Binding Path=AdductName}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Pre. m/z" Width="*" Binding="{Binding Path=PrecursorMz}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Dot prod." Width="*" Binding="{Binding Path=WeightedDotProduct, StringFormat=0.00}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Rev. prod." Width="*" Binding="{Binding Path=ReverseDotProduct, StringFormat=0.00}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Presense" Width="*" Binding="{Binding Path=Presence, StringFormat=0.00}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Instrument" Width="*" Binding="{Binding Path=Instrument}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Comment" Width="2*" Binding="{Binding Path=Comment}" IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>

            <StackPanel Margin="5,10" Grid.Row="0">
                <StackPanel.Resources>
                    <Style TargetType="Label">
                        <Setter Property="Width" Value="210"/>
                        <Setter Property="Height" Value="25"/>
                    </Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Height" Value="25"/>
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Foreground" Value="Black" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="IsReadOnly" Value="True" />
                    </Style>
                </StackPanel.Resources>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Name:"/>
                    <TextBox Name="Label_PeakInformation_AnnotatedMetabolite" Text="{Binding Compounds/Name, Mode=OneWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Accurate mass similarity score: "/>
                    <TextBox Name="Label_PeakInformation_Ms1Similarity" Text="{Binding Compounds/MassSimilarity, Mode=OneWay}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Dot product similarity score: " />
                    <TextBox Name="Label_PeakInformation_DotProduct" Text="{Binding Compounds/WeightedDotProduct, Mode=OneWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Reverse dot product similarity score: " />
                    <TextBox Name="Label_PeakInformation_ReverseDotProduct" Text="{Binding Compounds/ReverseDotProduct, Mode=OneWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Total score: "/>
                    <TextBox Name="Label_PeakInformation_TotalScore" Text="{Binding Compounds/TotalScore, Mode=OneWay}"/>
                </StackPanel>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,0,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Border Background="WhiteSmoke"
                        BorderBrush="Black" BorderThickness="1,0,0,0"
                        Grid.Row="1" Grid.Column="2" >
                    <spectrum:LineSpectrumControl x:Name="MS2DecLine"
                                                  ItemsSource="{Binding Ms2DecSpectrum}"
                                                  HorizontalAxis="{Binding AxisMapper, Source={StaticResource MassAxisManager}}"
                                                  VerticalAxis="{Binding AxisMapper, Source={StaticResource MeasureIntensityAxisManager}}"
                                                  RangeX="{Binding Range, Source={StaticResource MassAxisManager}, UpdateSourceTrigger=PropertyChanged}"
                                                  RangeY="{Binding Range, Source={StaticResource MeasureIntensityAxisManager}}"
                                                  HorizontalPropertyName="Mass" VerticalPropertyName="Intensity" >
                        <spectrum:LineSpectrumControl.LinePen>
                            <Pen Thickness="1" Brush="Blue" PresentationOptions:Freeze="True" />
                        </spectrum:LineSpectrumControl.LinePen>
                        <spectrum:LineSpectrumControl.ToolTip>
                            <ToolTip DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="m/z: "/>
                                    <TextBlock Text="{Binding FocusedItem.Mass}"/>
                                    <TextBlock Text=" Intensity: "/>
                                    <TextBlock Text="{Binding FocusedItem.Intensity}"/>
                                </StackPanel>
                            </ToolTip>
                        </spectrum:LineSpectrumControl.ToolTip>
                    </spectrum:LineSpectrumControl>
                </Border>
                <Border Background="WhiteSmoke"
                        BorderBrush="Black" BorderThickness="1,0,0,1"
                        Grid.Row="2" Grid.Column="2" >
                    <spectrum:LineSpectrumControl x:Name="MS2Ref"
                                           ItemsSource="{Binding Compounds/Spectrum}"
                                           HorizontalAxis="{Binding AxisMapper, Source={StaticResource MassAxisManager}}"
                                           VerticalAxis="{Binding AxisMapper, Source={StaticResource ReferenceIntensityAxisManager}}"
                                           RangeX="{Binding Range, Source={StaticResource MassAxisManager}}"
                                           RangeY="{Binding Range, Source={StaticResource ReferenceIntensityAxisManager}}"
                                           FlippedY="False"
                                           HorizontalPropertyName="Mass"
                                           VerticalPropertyName="Intensity">
                        <spectrum:LineSpectrumControl.LinePen>
                            <Pen Thickness="1" Brush="Red" PresentationOptions:Freeze="true"/>
                        </spectrum:LineSpectrumControl.LinePen>
                    </spectrum:LineSpectrumControl>
                </Border>
                <axis:HorizontalAxisControl x:Name="MzAxis"
                                            DataContext="{Binding Source={StaticResource MassAxisManager}}"
                                            HorizontalAxis="{Binding AxisMapper}"
                                            LabelTicks="{Binding LabelTicks}"
                                            RangeX="{Binding Range}"
                                            Grid.Row="3" Grid.Column="2" />
                <axis:VerticalAxisControl x:Name="MeasureIntensityAxis"
                                          DataContext="{Binding Source={StaticResource MeasureIntensityAxisManager}}"
                                          VerticalAxis="{Binding AxisMapper}"
                                          LabelTicks="{Binding LabelTicks}"
                                          RangeY="{Binding Range}"
                                          Grid.Row="1" Grid.Column="1" />
                <axis:VerticalAxisControl x:Name="ReferenceIntensityAxis"
                                          DataContext="{Binding Source={StaticResource ReferenceIntensityAxisManager}}"
                                          VerticalAxis="{Binding AxisMapper}"
                                          LabelTicks="{Binding LabelTicks}"
                                          RangeY="{Binding Range}"
                                          FlippedY="False"
                                          Grid.Row="2" Grid.Column="1" />
                <TextBlock Text="m/z"
                           FontStyle="Italic"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Grid.Row="4" Grid.Column="2" />
                <TextBlock Text="Relative abundance"
                           FontStyle="Italic"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">
                    <TextBlock.LayoutTransform>
                        <TransformGroup>
                            <RotateTransform Angle="-90" />
                            <TranslateTransform X="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=TextBlock}}" />
                        </TransformGroup>
                    </TextBlock.LayoutTransform>
                </TextBlock>
                <TextBlock Text="Measurement vs. Reference"
                           VerticalAlignment="Bottom"
                           Grid.Row="0" Grid.Column="3"/>
                <TextBlock Text="Measurement" FontStyle="Italic" FontFamily="Calibri"
                           VerticalAlignment="Bottom" HorizontalAlignment="Right"
                           Grid.Row="0" Grid.Column="3"/>
                <TextBlock Text="Reference" FontStyle="Italic" FontFamily="Calibri"
                           VerticalAlignment="Bottom" HorizontalAlignment="Right"
                           Margin="0,0,5,5"
                           Grid.Row="4" Grid.Column="3"/>
                <GridSplitter Background="Black"
                              Height="1"
                              HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                              Grid.Row="1" Grid.Column="2"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
