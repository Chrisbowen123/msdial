<UserControl x:Class="CompMs.App.Msdial.View.Dims.EicView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompMs.App.Msdial.View.Dims"
             mc:Ignorable="d" 
             xmlns:manager="clr-namespace:CompMs.Graphics.AxisManager;assembly=ChartDrawing"
             xmlns:line="clr-namespace:CompMs.Graphics.LineChart;assembly=ChartDrawing"
             xmlns:spectrum="clr-namespace:CompMs.Graphics.LineSpectrum;assembly=ChartDrawing"
             xmlns:area="clr-namespace:CompMs.Graphics.AreaChart;assembly=ChartDrawing"
             xmlns:chart="clr-namespace:CompMs.Graphics.Chart;assembly=ChartDrawing"
             xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
             xmlns:vm="clr-namespace:CompMs.App.Msdial.ViewModel.Dims"
             Name="EicPlot"
             d:DataContext="{d:DesignInstance Type={x:Type vm:AnalysisDimsVM}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <d:DesignerProperties.DesignStyle>
        <Style TargetType="UserControl">
            <Setter Property="Background" Value="White"/>
        </Style>
    </d:DesignerProperties.DesignStyle>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/ChartStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <manager:AutoContinuousAxisManager x:Key="IntensityAxis"
                                               ItemsSource="{Binding DataContext.Eic, Source={x:Reference Name=EicPlot}}"
                                               ValuePropertyName="Intensity"
                                               ChartMargin="0,0.05" Bounds="0,0"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <chart:MultiChart HorizontalAxis="{Binding MassAxis, ElementName=EicPlot}"
                          VerticalAxis="{StaticResource IntensityAxis}"
                          HorizontalTitle="m/z"
                          VerticalTitle="Abundance"
                          Style="{StaticResource OverlapChart}"
                          Background="WhiteSmoke"
                          BorderBrush="Black">
            <chart:MultiChart.GraphTitle>
                <MultiBinding StringFormat="{}{0}[Da]  Max intensity: {1}">
                    <Binding Path="Target.Mass" StringFormat="N4" Mode="OneWay"/>
                    <Binding Path="DataContext.EicMaxIntensity" StringFormat="F0" Mode="OneWay" ElementName="EicPlot"/>
                </MultiBinding>
            </chart:MultiChart.GraphTitle>
            <area:AreaChartControl x:Name="area"
                                   ItemsSource="{Binding PeakEic}"
                                   HorizontalPropertyName="ChromXValue"
                                   VerticalPropertyName="Intensity">
                <area:AreaChartControl.AreaBrush>
                    <SolidColorBrush Opacity="0.25" Color="Blue" PresentationOptions:Freeze="True"/>
                </area:AreaChartControl.AreaBrush>
            </area:AreaChartControl>
            <line:LineChartControl x:Name="line"
                                   ItemsSource="{Binding Eic}"
                                   HorizontalPropertyName="ChromXValue"
                                   VerticalPropertyName="Intensity">
                <line:LineChartControl.LinePen>
                    <Pen Brush="Blue" PresentationOptions:Freeze="True"/>
                </line:LineChartControl.LinePen>
            </line:LineChartControl>
            <spectrum:LineSpectrumControl x:Name="spectrum"
                                          ItemsSource="{Binding FocusedEic}"
                                          HorizontalPropertyName="ChromXValue"
                                          VerticalPropertyName="Intensity">
                <spectrum:LineSpectrumControl.LinePen>
                    <Pen Brush="Red" Thickness="1.5" LineJoin="Miter" PresentationOptions:Freeze="True"/>
                </spectrum:LineSpectrumControl.LinePen>
            </spectrum:LineSpectrumControl>
        </chart:MultiChart>
    </Grid>
</UserControl>
