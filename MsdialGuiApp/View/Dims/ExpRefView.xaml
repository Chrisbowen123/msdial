<UserControl x:Class="CompMs.App.Msdial.View.Dims.ExpRefView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompMs.App.Msdial.View.Dims"
             mc:Ignorable="d" 
             xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
             xmlns:manager="clr-namespace:CompMs.Graphics.AxisManager;assembly=ChartDrawing"
             xmlns:spectrum="clr-namespace:CompMs.Graphics.LineSpectrum;assembly=ChartDrawing"
             xmlns:chart="clr-namespace:CompMs.Graphics.Chart;assembly=ChartDrawing"
             xmlns:axis="clr-namespace:CompMs.Graphics.GraphAxis;assembly=ChartDrawing"
             xmlns:vm="clr-namespace:CompMs.App.Msdial.ViewModel.Dims"
             Name="ExpRefPlot"
             d:DesignHeight="600" d:DesignWidth="370"
             d:DataContext="{d:DesignInstance Type={x:Type vm:AnalysisDimsVM}}">
    <d:DesingerProperties.DesignStyle>
        <Style TargetType="UserControl">
            <Setter Property="Background" Value="White"/>
        </Style>
    </d:DesingerProperties.DesignStyle>
    <UserControl.Resources>
        <manager:ContinuousAxisManager x:Key="MassAxisManager"
                                       MinValue="{Binding DataContext.Ms2MassMin, Source={x:Reference Name=ExpRefPlot}}"
                                       MaxValue="{Binding DataContext.Ms2MassMax, Source={x:Reference Name=ExpRefPlot}}"
                                       ChartMargin="0.05"/>
        <manager:AutoContinuousAxisManager x:Key="MeasureIntensityAxisManager"
                                           ItemsSource="{Binding DataContext.Ms2Spectrum, Source={x:Reference Name=ExpRefPlot}}"
                                           ValuePropertyName="Intensity"
                                           Bounds="0,0"
                                           ChartMargin="0,0.5" />
        <manager:AutoContinuousAxisManager x:Key="ReferenceIntensityAxisManager"
                                           ItemsSource="{Binding DataContext.Ms2ReferenceSpectrum, Source={x:Reference Name=ExpRefPlot}}"
                                           ValuePropertyName="Intensity"
                                           Bounds="0,0"
                                           ChartMargin="0,0.5"/>
    </UserControl.Resources>
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Save spectra table as.." Command="{Binding SaveMs2SpectrumCommand}" />
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="10,5,0,5" Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="RadioButton">
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Width" Value="30"/>
                    <Setter Property="Margin" Value="5,0,0,0"/>
                    <Setter Property="BorderBrush" Value="Aqua"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="RadioButton">
                                <Border BorderBrush="{Binding Path=BorderBrush, RelativeSource={RelativeSource TemplatedParent}}"
                                        BorderThickness="{Binding Path=BorderThickness, RelativeSource={RelativeSource TemplatedParent}}"
                                        CornerRadius="1">
                                    <Image Source="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Width" Value="30"/>
                    <Setter Property="Margin" Value="5,0,0,0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <Image Source="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>

            <RadioButton Name="Button_ShowCentroid"
                         Content="/Resources/RawChromatogram.ico"
                         ToolTip="Show centroid spectra vs. reference spectra"/>

            <RadioButton Name="Button_ShowDeconvolution"
                         IsChecked="True"
                         Content="/Resources/Deconvoluted.ico"
                         ToolTip="Show deconvoluted spectra vs. reference spectra"/>

            <Button Name="Button_CompoundSearchPeakViewer"
                    Command="{Binding SearchCompoundCommand, Mode=OneTime}"
                    Content="/Resources/CompoundSearchIcon.ico"
                    ToolTip="Compound search"/>

            <Button Name="Button_MsFinderSearchPeakViewer"
                    Content="/Resources/msfinder_icon.ico"
                    ToolTip="MS-FINDER search"/>

            <Button Name="Button_MolecularNetworkPeakViewer"
                    Content="/Resources/MolecularNetworking.ico"
                    ToolTip="Molecular-spectrum networking for selected peak spot"/>

            <Button Name="Button_BinVestigateSearchPeakViewer"
                    Content="/Resources/BinVestigate.ico"
                    ToolTip="BinVestigate search"/>

            <Button Name="Button_LipoqualityDbSearchPeakViewer"
                    Content="/Resources/Lipoquality.ico"
                    ToolTip="Show lipoquality database (developing, and the result of mouse experiments can be shown now.)"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Border Background="WhiteSmoke"
                    Grid.Row="1" Grid.Column="3" >
                <Grid>
                    <spectrum:LineSpectrumControl x:Name="MS2Line"
                                                  ItemsSource="{Binding Ms2Spectrum}"
                                                  HorizontalAxis="{Binding AxisMapper, Source={StaticResource MassAxisManager}}"
                                                  VerticalAxis="{Binding AxisMapper, Source={StaticResource MeasureIntensityAxisManager}}"
                                                  RangeX="{Binding Range, Source={StaticResource MassAxisManager}, UpdateSourceTrigger=PropertyChanged}"
                                                  RangeY="{Binding Range, Source={StaticResource MeasureIntensityAxisManager}}"
                                                  HorizontalPropertyName="Mass" VerticalPropertyName="Intensity">
                        <spectrum:LineSpectrumControl.Style>
                            <Style TargetType="{x:Type spectrum:LineSpectrumControl}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=Button_ShowCentroid}" Value="False">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </spectrum:LineSpectrumControl.Style>
                        <spectrum:LineSpectrumControl.LinePen>
                            <Pen Thickness="1" Brush="Blue" PresentationOptions:Freeze="True" />
                        </spectrum:LineSpectrumControl.LinePen>
                        <spectrum:LineSpectrumControl.ToolTip>
                            <ToolTip DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="m/z: "/>
                                    <TextBlock Text="{Binding FocusedItem.Mass}"/>
                                    <TextBlock Text=" Intensity: "/>
                                    <TextBlock Text="{Binding FocusedItem.Intensity}"/>
                                </StackPanel>
                            </ToolTip>
                        </spectrum:LineSpectrumControl.ToolTip>
                    </spectrum:LineSpectrumControl>
                    <chart:Annotator ItemsSource="{Binding Ms2Spectrum}"
                                     HorizontalAxis="{Binding AxisMapper, Source={StaticResource MassAxisManager}}"
                                     VerticalAxis="{Binding AxisMapper, Source={StaticResource MeasureIntensityAxisManager}}"
                                     RangeX="{Binding Range, Source={StaticResource MassAxisManager}, UpdateSourceTrigger=PropertyChanged}"
                                     RangeY="{Binding Range, Source={StaticResource MeasureIntensityAxisManager}}"
                                     HorizontalPropertyName="Mass" VerticalPropertyName="Intensity" LabelPropertyName="Mass"
                                     OrderingPropertyName="Intensity" TopN="3" Format="N2">
                        <chart:Annotator.Style>
                            <Style TargetType="{x:Type chart:Annotator}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=Button_ShowCentroid}" Value="False">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </chart:Annotator.Style>
                    </chart:Annotator>
                    <spectrum:LineSpectrumControl x:Name="MS2DecLine"
                                                  ItemsSource="{Binding Ms2DecSpectrum}"
                                                  HorizontalAxis="{Binding AxisMapper, Source={StaticResource MassAxisManager}}"
                                                  VerticalAxis="{Binding AxisMapper, Source={StaticResource MeasureIntensityAxisManager}}"
                                                  RangeX="{Binding Range, Source={StaticResource MassAxisManager}, UpdateSourceTrigger=PropertyChanged}"
                                                  RangeY="{Binding Range, Source={StaticResource MeasureIntensityAxisManager}}"
                                                  HorizontalPropertyName="Mass" VerticalPropertyName="Intensity" >
                        <spectrum:LineSpectrumControl.Style>
                            <Style TargetType="{x:Type spectrum:LineSpectrumControl}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=Button_ShowDeconvolution}" Value="False">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </spectrum:LineSpectrumControl.Style>
                        <spectrum:LineSpectrumControl.LinePen>
                            <Pen Thickness="1" Brush="Blue" PresentationOptions:Freeze="True" />
                        </spectrum:LineSpectrumControl.LinePen>
                        <spectrum:LineSpectrumControl.ToolTip>
                            <ToolTip DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="m/z: "/>
                                    <TextBlock Text="{Binding FocusedItem.Mass}"/>
                                    <TextBlock Text=" Intensity: "/>
                                    <TextBlock Text="{Binding FocusedItem.Intensity}"/>
                                </StackPanel>
                            </ToolTip>
                        </spectrum:LineSpectrumControl.ToolTip>
                    </spectrum:LineSpectrumControl>
                    <chart:Annotator ItemsSource="{Binding Ms2DecSpectrum}"
                                     HorizontalAxis="{Binding AxisMapper, Source={StaticResource MassAxisManager}}"
                                     VerticalAxis="{Binding AxisMapper, Source={StaticResource MeasureIntensityAxisManager}}"
                                     RangeX="{Binding Range, Source={StaticResource MassAxisManager}, UpdateSourceTrigger=PropertyChanged}"
                                     RangeY="{Binding Range, Source={StaticResource MeasureIntensityAxisManager}}"
                                     HorizontalPropertyName="Mass" VerticalPropertyName="Intensity" LabelPropertyName="Mass"
                                     OrderingPropertyName="Intensity" TopN="3" Format="N2">
                        <chart:Annotator.Style>
                            <Style TargetType="{x:Type chart:Annotator}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=Button_ShowDeconvolution}" Value="False">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </chart:Annotator.Style>
                    </chart:Annotator>
                </Grid>
            </Border>
            <Border Background="WhiteSmoke"
                    Grid.Row="3" Grid.Column="3" >
                <Grid>
                    <spectrum:LineSpectrumControl x:Name="MS2Ref"
                                           ItemsSource="{Binding Ms2ReferenceSpectrum}"
                                           HorizontalAxis="{Binding AxisMapper, Source={StaticResource MassAxisManager}}"
                                           VerticalAxis="{Binding AxisMapper, Source={StaticResource ReferenceIntensityAxisManager}}"
                                           RangeX="{Binding Range, Source={StaticResource MassAxisManager}}"
                                           RangeY="{Binding Range, Source={StaticResource ReferenceIntensityAxisManager}}"
                                           FlippedY="False"
                                           HorizontalPropertyName="Mass"
                                           VerticalPropertyName="Intensity">
                        <spectrum:LineSpectrumControl.LinePen>
                            <Pen Thickness="1" Brush="Red" PresentationOptions:Freeze="true"/>
                        </spectrum:LineSpectrumControl.LinePen>
                    </spectrum:LineSpectrumControl>
                    <chart:Annotator ItemsSource="{Binding Ms2ReferenceSpectrum}"
                                     HorizontalAxis="{Binding AxisMapper, Source={StaticResource MassAxisManager}}"
                                     VerticalAxis="{Binding AxisMapper, Source={StaticResource ReferenceIntensityAxisManager}}"
                                     RangeX="{Binding Range, Source={StaticResource MassAxisManager}}"
                                     RangeY="{Binding Range, Source={StaticResource ReferenceIntensityAxisManager}}"
                                     FlippedY="False"
                                     HorizontalPropertyName="Mass" VerticalPropertyName="Intensity" LabelPropertyName="Mass"
                                     OrderingPropertyName="Intensity" TopN="3" ContentAlignment="BottomCenter" Format="N2"/>
                </Grid>
            </Border>
            <axis:HorizontalAxisControl x:Name="MzAxis"
                                        DataContext="{Binding Source={StaticResource MassAxisManager}}"
                                        HorizontalAxis="{Binding AxisMapper}"
                                        LabelTicks="{Binding LabelTicks}"
                                        RangeX="{Binding Range}"
                                        Grid.Row="5" Grid.Column="3" />
            <axis:VerticalAxisControl x:Name="MeasureIntensityAxis"
                                      DataContext="{Binding Source={StaticResource MeasureIntensityAxisManager}}"
                                      VerticalAxis="{Binding AxisMapper}"
                                      LabelTicks="{Binding LabelTicks}"
                                      RangeY="{Binding Range}"
                                      Grid.Row="1" Grid.Column="1" />
            <axis:VerticalAxisControl x:Name="ReferenceIntensityAxis"
                                      DataContext="{Binding Source={StaticResource ReferenceIntensityAxisManager}}"
                                      VerticalAxis="{Binding AxisMapper}"
                                      LabelTicks="{Binding LabelTicks}"
                                      RangeY="{Binding Range}"
                                      FlippedY="False"
                                      Grid.Row="3" Grid.Column="1" />
            <TextBlock Text="m/z"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="6" Grid.Column="3" />
            <TextBlock Text="Relative abundance"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="1" Grid.Column="0" Grid.RowSpan="3">
                <TextBlock.LayoutTransform>
                    <TransformGroup>
                        <RotateTransform Angle="-90" />
                        <TranslateTransform X="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=TextBlock}}" />
                    </TransformGroup>
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBlock Text="Measurement vs. Reference"
                       VerticalAlignment="Bottom"
                       Grid.Row="0" Grid.Column="3"/>
            <TextBlock Text="Measurement" FontStyle="Italic" FontFamily="Calibri"
                       VerticalAlignment="Bottom" HorizontalAlignment="Right"
                       Grid.Row="0" Grid.Column="3"/>
            <TextBlock Text="Reference" FontStyle="Italic" FontFamily="Calibri"
                       VerticalAlignment="Bottom" HorizontalAlignment="Right"
                       Margin="0,0,5,5"
                       Grid.Row="6" Grid.Column="3"/>
            <GridSplitter Background="Black"
                          Height="2"
                          Margin="0,-3"
                          HorizontalAlignment="Stretch"
                          Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" />
            <GridSplitter Background="Black"
                          Height="2"
                          Margin="0,-3"
                          HorizontalAlignment="Stretch"
                          Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" />
            <GridSplitter Background="Black"
                          Width="2"
                          Margin="-3,0"
                          HorizontalAlignment="Stretch"
                          Grid.Row="1" Grid.Column="2" Grid.RowSpan="3" />
        </Grid>
    </Grid>
</UserControl>
