<UserControl x:Class="CompMs.App.Msdial.View.ExpRefView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompMs.App.Msdial.View.Dims"
             mc:Ignorable="d" 
             xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
             xmlns:manager="clr-namespace:CompMs.Graphics.AxisManager;assembly=ChartDrawing"
             xmlns:spectrum="clr-namespace:CompMs.Graphics.LineSpectrum;assembly=ChartDrawing"
             xmlns:chart="clr-namespace:CompMs.Graphics.Chart;assembly=ChartDrawing"
             xmlns:core="clr-namespace:CompMs.Graphics.Core.Base;assembly=ChartDrawing"
             xmlns:behavior="clr-namespace:CompMs.Graphics.Behavior;assembly=ChartDrawing"
             xmlns:vm="clr-namespace:CompMs.App.Msdial.ViewModel.Dims"
             Name="ExpRefPlot"
             d:DesignHeight="600" d:DesignWidth="370"
             d:DataContext="{d:DesignInstance Type={x:Type vm:AnalysisDimsVM}}">
    <d:DesingerProperties.DesignStyle>
        <Style TargetType="UserControl">
            <Setter Property="Background" Value="White"/>
        </Style>
    </d:DesingerProperties.DesignStyle>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/ChartStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <manager:ContinuousAxisManager x:Key="MassAxisManager"
                                           MinValue="{Binding MassMin, Source={x:Reference Name=ExpRefPlot}}"
                                           MaxValue="{Binding MassMax, Source={x:Reference Name=ExpRefPlot}}"
                                           ChartMargin="0.05"/>
            <manager:AutoContinuousAxisManager x:Key="MeasureIntensityAxisManager"
                                               ItemsSource="{Binding Spectrum, Source={x:Reference Name=ExpRefPlot}}"
                                               ValuePropertyName="Intensity"
                                               Bounds="0,0"
                                               ChartMargin="0,0.1" />
            <manager:AutoContinuousAxisManager x:Key="ReferenceIntensityAxisManager"
                                               ItemsSource="{Binding ReferenceSpectrum, Source={x:Reference Name=ExpRefPlot}}"
                                               ValuePropertyName="Intensity"
                                               Bounds="0,0"
                                               ChartMargin="0,0.1"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="10,5,0,5" Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="RadioButton">
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Width" Value="30"/>
                    <Setter Property="Margin" Value="5,0,0,0"/>
                    <Setter Property="BorderBrush" Value="Aqua"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="RadioButton">
                                <Border BorderBrush="{Binding Path=BorderBrush, RelativeSource={RelativeSource TemplatedParent}}"
                                        BorderThickness="{Binding Path=BorderThickness, RelativeSource={RelativeSource TemplatedParent}}"
                                        CornerRadius="1">
                                    <Image Source="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Width" Value="30"/>
                    <Setter Property="Margin" Value="5,0,0,0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <Image Source="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>

            <RadioButton Name="Button_ShowCentroid"
                         Content="/Resources/RawChromatogram.ico"
                         ToolTip="Show centroid spectra vs. reference spectra"/>

            <RadioButton Name="Button_ShowDeconvolution"
                         IsChecked="True"
                         Content="/Resources/Deconvoluted.ico"
                         ToolTip="Show deconvoluted spectra vs. reference spectra"/>

            <Button Name="Button_CompoundSearchPeakViewer"
                    Command="{Binding SearchCompoundCommand, Mode=OneTime}"
                    Content="/Resources/CompoundSearchIcon.ico"
                    ToolTip="Compound search"/>

            <Button Name="Button_MsFinderSearchPeakViewer"
                    Content="/Resources/msfinder_icon.ico"
                    ToolTip="MS-FINDER search"/>

            <Button Name="Button_MolecularNetworkPeakViewer"
                    Content="/Resources/MolecularNetworking.ico"
                    ToolTip="Molecular-spectrum networking for selected peak spot"/>

            <Button Name="Button_BinVestigateSearchPeakViewer"
                    Content="/Resources/BinVestigate.ico"
                    ToolTip="BinVestigate search"/>

            <Button Name="Button_LipoqualityDbSearchPeakViewer"
                    Content="/Resources/Lipoquality.ico"
                    ToolTip="Show lipoquality database (developing, and the result of mouse experiments can be shown now.)"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,10,0">

            <chart:MultiChart Style="{StaticResource VerticalConcatChart}"
                              HorizontalAxis="{StaticResource MassAxisManager}"
                              GraphTitle="Measurement vs. Reference"
                              HorizontalTitle="m/z"
                              VerticalTitle="Abundance"
                              Background="WhiteSmoke" BorderBrush="Black">
                <Grid core:ChartBaseControl.VerticalAxis="{StaticResource MeasureIntensityAxisManager}">
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=Button_ShowCentroid}" Value="False">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <spectrum:LineSpectrumControl x:Name="MS2Line"
                                                      ItemsSource="{Binding Spectrum, ElementName=ExpRefPlot}"
                                                      HorizontalPropertyName="Mass" VerticalPropertyName="Intensity"
                                                      behavior:ZoomByDragBehavior.IsEnabled="False"
                                                      behavior:ZoomByWheelBehavior.IsEnabled="False"
                                                      behavior:MoveByDragBehavior.IsEnabled="False"
                                                      behavior:ResetRangeByDoubleClickBehavior.IsEnabled="False">
                            <spectrum:LineSpectrumControl.LinePen>
                                <Pen Thickness="2" Brush="Blue" PresentationOptions:Freeze="True" />
                            </spectrum:LineSpectrumControl.LinePen>
                            <spectrum:LineSpectrumControl.ToolTip>
                                <ToolTip DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="m/z: "/>
                                        <TextBlock Text="{Binding FocusedItem.Mass}"/>
                                        <TextBlock Text=" Intensity: "/>
                                        <TextBlock Text="{Binding FocusedItem.Intensity}"/>
                                    </StackPanel>
                                </ToolTip>
                            </spectrum:LineSpectrumControl.ToolTip>
                        </spectrum:LineSpectrumControl>
                        <chart:Annotator ItemsSource="{Binding Spectrum, ElementName=ExpRefPlot}"
                                         HorizontalPropertyName="Mass" VerticalPropertyName="Intensity" LabelPropertyName="Mass"
                                         OrderingPropertyName="Intensity" TopN="3" Format="N2"
                                         behavior:ZoomByDragBehavior.IsEnabled="False"
                                         behavior:ZoomByWheelBehavior.IsEnabled="False"
                                         behavior:MoveByDragBehavior.IsEnabled="False"
                                         behavior:ResetRangeByDoubleClickBehavior.IsEnabled="False"/>
                    </Grid>
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=Button_ShowDeconvolution}" Value="False">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <spectrum:LineSpectrumControl x:Name="MS2DecLine"
                                                      ItemsSource="{Binding DeconvolutionSpectrum, ElementName=ExpRefPlot}"
                                                      HorizontalPropertyName="Mass" VerticalPropertyName="Intensity"
                                                      behavior:ZoomByDragBehavior.IsEnabled="False"
                                                      behavior:ZoomByWheelBehavior.IsEnabled="False"
                                                      behavior:MoveByDragBehavior.IsEnabled="False"
                                                      behavior:ResetRangeByDoubleClickBehavior.IsEnabled="False">
                            <spectrum:LineSpectrumControl.ToolTip>
                                <ToolTip DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="m/z: "/>
                                        <TextBlock Text="{Binding FocusedItem.Mass}"/>
                                        <TextBlock Text=" Intensity: "/>
                                        <TextBlock Text="{Binding FocusedItem.Intensity}"/>
                                    </StackPanel>
                                </ToolTip>
                            </spectrum:LineSpectrumControl.ToolTip>
                        </spectrum:LineSpectrumControl>
                        <chart:Annotator ItemsSource="{Binding DeconvolutionSpectrum, ElementName=ExpRefPlot}"
                                         HorizontalPropertyName="Mass" VerticalPropertyName="Intensity" LabelPropertyName="Mass"
                                         OrderingPropertyName="Intensity" TopN="3" Format="N2"
                                         behavior:ZoomByDragBehavior.IsEnabled="False"
                                         behavior:ZoomByWheelBehavior.IsEnabled="False"
                                         behavior:MoveByDragBehavior.IsEnabled="False"
                                         behavior:ResetRangeByDoubleClickBehavior.IsEnabled="False"/>
                    </Grid>
                </Grid>

                <Grid core:ChartBaseControl.VerticalAxis="{StaticResource ReferenceIntensityAxisManager}"
                      core:ChartBaseControl.FlippedY="False">
                    <spectrum:LineSpectrumControl x:Name="MS2Ref"
                                                  ItemsSource="{Binding ReferenceSpectrum, ElementName=ExpRefPlot}"
                                                  HorizontalPropertyName="Mass"
                                                  VerticalPropertyName="Intensity"
                                                  behavior:ZoomByDragBehavior.IsEnabled="False"
                                                  behavior:ZoomByWheelBehavior.IsEnabled="False"
                                                  behavior:MoveByDragBehavior.IsEnabled="False"
                                                  behavior:ResetRangeByDoubleClickBehavior.IsEnabled="False">
                        <spectrum:LineSpectrumControl.LinePen>
                            <Pen Thickness="2" Brush="Red" PresentationOptions:Freeze="true"/>
                        </spectrum:LineSpectrumControl.LinePen>
                    </spectrum:LineSpectrumControl>
                    <chart:Annotator ItemsSource="{Binding ReferenceSpectrum, ElementName=ExpRefPlot}"
                                     HorizontalPropertyName="Mass" VerticalPropertyName="Intensity" LabelPropertyName="Mass"
                                     OrderingPropertyName="Intensity" TopN="3" ContentAlignment="BottomCenter" Format="N2"
                                     behavior:ZoomByDragBehavior.IsEnabled="False"
                                     behavior:ZoomByWheelBehavior.IsEnabled="False"
                                     behavior:MoveByDragBehavior.IsEnabled="False"
                                     behavior:ResetRangeByDoubleClickBehavior.IsEnabled="False"/>
                </Grid>
            </chart:MultiChart>
            <TextBlock Text="Measurement" FontStyle="Italic" FontFamily="Calibri"
                       VerticalAlignment="Top" HorizontalAlignment="Right" />
            <TextBlock Text="Reference" FontStyle="Italic" FontFamily="Calibri"
                       VerticalAlignment="Bottom" HorizontalAlignment="Right"
                       Margin="0,0,5,5"/>
        </Grid>
    </Grid>
</UserControl>
