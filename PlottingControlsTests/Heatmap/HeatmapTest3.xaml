<Page x:Class="PlottingControlsTests.Heatmap.HeatmapTest3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PlottingControlsTests.Heatmap"
      xmlns:heatmap="clr-namespace:PlottingControls.Heatmap;assembly=PlottingControls"
      xmlns:axis="clr-namespace:PlottingControls.GraphAxis;assembly=PlottingControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HeatmapTest3">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Label Content="Heatmap + CategoryHorizontalAxis + CategoryVerticalAxis"/>
            <Button Content="Show" Click="Button_Click"
                    Width="60" Margin="5,5,5,5" HorizontalAlignment="Right"/>
        </StackPanel>
        <heatmap:HeatmapControl
            DataMatrix="{Binding DataMatrix}"
            XPositions="{Binding XPositions}"
            YPositions="{Binding YPositions}"
            XDisplayMin="{Binding XDisplayMin}"
            XDisplayMax="{Binding XDisplayMax}"
            YDisplayMin="{Binding YDisplayMin}"
            YDisplayMax="{Binding YDisplayMax}"
            ZDisplayMin="{Binding ZDisplayMin}"
            ZDisplayMax="{Binding ZDisplayMax}"
            Grid.Row="1" Grid.Column="1"/>
        <axis:CategoryHorizontalAxisControl
            XLabels="{Binding XLabels}"
            XPositions="{Binding XPositions}"
            XDisplayMin="{Binding XDisplayMin}"
            XDisplayMax="{Binding XDisplayMax}"
            Grid.Row="2" Grid.Column="1"/>
        <axis:CategoryVerticalAxisControl
            YLabels="{Binding YLabels}"
            YPositions="{Binding YPositions}"
            YDisplayMin="{Binding YDisplayMin}"
            YDisplayMax="{Binding YDisplayMax}"
            Grid.Row="1" Grid.Column="0"/>

    </Grid>
</Page>
