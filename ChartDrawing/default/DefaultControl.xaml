<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CompMs.Graphics.Base">
    <Style TargetType="{x:Type local:DefaultControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:DefaultControl}">
                    <Border x:Name="PART_Chart"
                            Background="WhiteSmoke"
                            BorderBrush="Black"
                            BorderThickness="1">
                        <Image
                            Source="{Binding Chart, RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay}"
                            Stretch="None"
                            VerticalAlignment="Bottom"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
