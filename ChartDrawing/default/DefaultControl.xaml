<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:local="clr-namespace:CompMs.Graphics.Base"
                    xmlns:behavior="clr-namespace:CompMs.Graphics.Core.Behavior">
    <Style TargetType="{x:Type local:DefaultControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:DefaultControl}">
                    <Border x:Name="PART_Chart"
                            Background="WhiteSmoke"
                            BorderBrush="Black"
                            BorderThickness="1">
                        <local:DrawingControl Source="{Binding Chart, RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay}">
                            <i:Interaction.Behaviors>
                                <behavior:WheelZoomBehavior DrawingChart="{Binding DrawingChart, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"/>
                                <behavior:ResetZoomBehavior DrawingChart="{Binding DrawingChart, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"/>
                                <behavior:MoveChartBehavior DrawingChart="{Binding DrawingChart, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"/>
                            </i:Interaction.Behaviors>
                        </local:DrawingControl>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
