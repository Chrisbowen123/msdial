<Window x:Class="CompMs.Graphics.UI.Message.ShortMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompMs.Graphics.UI.Message"
        mc:Ignorable="d"
        Title="Message" Height="120" Width="300">
    <Grid>
        <TextBox Name="Label_MessageTitle" Text="{Binding Text, RelativeSource={RelativeSource AncestorType=Window}}" 
               VerticalAlignment="Center" HorizontalAlignment="Center" 
               Margin="0,0,0,0" IsReadOnly="True" BorderThickness="0" />
    </Grid>
</Window>
