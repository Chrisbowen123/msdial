<Window x:Class="StatisticsTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StatisticsTestApp"
        xmlns:pairwiseplot="clr-namespace:Rfx.Riken.OsakaUniv;assembly=PairwisePlot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Click="Button_Click" Content="Show" Width="80" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,5,5,5" />
        <pairwiseplot:PairwisePlotUI
            Name="PairWise"
            Content="{Binding ScoreplotUI}"
            Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            />
    </Grid>
</Window>
