<Window x:Class="Rfx.Riken.OsakaUniv.HcaResultWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rfx.Riken.OsakaUniv"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:compound="clr-namespace:CompMs.Graphics.Compound;assembly=ChartDrawing"
        mc:Ignorable="d"
        Title="HcaResultWin" Height="700" Width="950">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MaxWidth="250"/>
            <ColumnDefinition Width="1*" MaxWidth="100"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <TextBlock>
                 Number of data: X axis
            </TextBlock>
            <TextBlock>
                 Number of data: Y axis
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <ComboBox
                Width="100" Margin="20, 20"
                SelectedIndex="4"
                SelectedValue="{Binding XNumberOfData, Mode=OneWayToSource}">
                <sys:Int32>5</sys:Int32>
                <sys:Int32>10</sys:Int32>
                <sys:Int32>50</sys:Int32>
                <sys:Int32>100</sys:Int32>
                <sys:Int32>500</sys:Int32>
                <sys:Int32>1000</sys:Int32>
                <sys:Int32>-1</sys:Int32>
            </ComboBox>
            <ComboBox
                Width="100" Margin="20, 20"
                SelectedIndex="4"
                SelectedValue="{Binding YNumberOfData, Mode=OneWayToSource}">
                <sys:Int32>5</sys:Int32>
                <sys:Int32>10</sys:Int32>
                <sys:Int32>50</sys:Int32>
                <sys:Int32>100</sys:Int32>
                <sys:Int32>500</sys:Int32>
                <sys:Int32>1000</sys:Int32>
                <sys:Int32>-1</sys:Int32>
            </ComboBox>
        </StackPanel>
        <compound:Clustermap
            DataContext="{Binding}"
            Margin="10,5,10,5"
            Grid.Column="2"
            />
    </Grid>
</Window>
