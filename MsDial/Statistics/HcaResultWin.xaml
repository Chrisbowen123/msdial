<Window x:Class="Rfx.Riken.OsakaUniv.HcaResultWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rfx.Riken.OsakaUniv"
        xmlns:hca="clr-namespace:Rfx.Riken.OsakaUniv.Hca"
        mc:Ignorable="d"
        Title="HCA result" Height="700" Width="950">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <ComboBox SelectedValuePath="Text"
                      SelectedValue="{Binding DisplayFileProperty, Mode=TwoWay}">
                <TextBlock Text="FileName" />
                <TextBlock Text="ClassName" />
            </ComboBox>
            <ComboBox SelectedValuePath="Text"
                      SelectedValue="{Binding NumberOfDisplayMetabolite, Mode=TwoWay}">
                <TextBlock>10</TextBlock>
                <TextBlock>20</TextBlock>
                <TextBlock>50</TextBlock>
                <TextBlock>100</TextBlock>
            </ComboBox>
        </StackPanel>
        <hca:HcaHeatmap Grid.Column="1"/>
    </Grid>
</Window>
