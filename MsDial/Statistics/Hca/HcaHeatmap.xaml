<UserControl x:Class="Rfx.Riken.OsakaUniv.Hca.HcaHeatmap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:local="clr-namespace:Rfx.Riken.OsakaUniv.Hca"
             xmlns:chart="clr-namespace:CompMs.Graphics.Base;assembly=ChartDrawing"
             xmlns:heatmap="clr-namespace:CompMs.Graphics.Heatmap;assembly=ChartDrawing"
             xmlns:dendrogram="clr-namespace:CompMs.Graphics.Dendrogram;assembly=ChartDrawing"
             xmlns:axis="clr-namespace:CompMs.Graphics.GraphAxis;assembly=ChartDrawing"
             mc:Ignorable="d" 
             x:Name="ClustermapControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <chart:CategoryAxisManager x:Key="FileAxis"
                                   ItemsSource="{Binding DataContext.FileView, Source={x:Reference ClustermapControl}}"
                                   IdentityPropertyName="ID" />
        <chart:CategoryAxisManager x:Key="MetaboliteAxis"
                                   ItemsSource="{Binding DataContext.MetaboliteView, Source={x:Reference ClustermapControl}}"
                                   IdentityPropertyName="ID"
                                   DisplayPropertyName="MetaboliteName" />
        <chart:ContinuousAxisManager x:Key="FileDendrogramAxis"
                                     MinValue="{Binding DataContext.FileDendrogramMinimum, Source={x:Reference ClustermapControl}}"
                                     MaxValue="{Binding DataContext.FileDendrogramMaximum, Source={x:Reference ClustermapControl}}"
                                     IsFlipped="True" />
        <chart:ContinuousAxisManager x:Key="MetaboliteDendrogramAxis"
                                     MinValue="{Binding DataContext.MetaboliteDendrogramMinimum, Source={x:Reference ClustermapControl}}"
                                     MaxValue="{Binding DataContext.MetaboliteDendrogramMaximum, Source={x:Reference ClustermapControl}}"
                                     IsFlipped="True" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <heatmap:HeatmapControl x:Name="heatmap"
                                ItemsSource="{Binding HeatmapView}"
                                HorizontalAxis="{Binding AxisMapper, Source={StaticResource FileAxis}}"
                                VerticalAxis="{Binding AxisMapper, Source={StaticResource MetaboliteAxis}}"
                                MinX="{Binding Min, Source={StaticResource FileAxis}}"
                                MaxX="{Binding Max, Source={StaticResource FileAxis}}"
                                MinY="{Binding Min, Source={StaticResource MetaboliteAxis}}"
                                MaxY="{Binding Max, Source={StaticResource MetaboliteAxis}}"
                                HorizontalPropertyName="FileId"
                                VerticalPropertyName="MetaboliteId"
                                DegreePropertyName="Intensity"
                                Grid.Column="3" Grid.Row="2"
                                ToolTipService.ShowDuration="{x:Static Member=sys:Int32.MaxValue}" >
            <heatmap:HeatmapControl.ToolTip>
                <ToolTip DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}"
                         Placement="Relative"
                         PlacementRectangle="0,-20,0,0"
                         HorizontalOffset="{Binding FocusedPoint.X}"
                         VerticalOffset="{Binding FocusedPoint.Y}" >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Sample = " />
                        <TextBlock Text="{Binding FocusedItem.FileName}" />
                        <TextBlock Text=", Metabolite = " />
                        <TextBlock Text="{Binding FocusedItem.MetaboliteName}" />
                    </StackPanel>
                </ToolTip>
            </heatmap:HeatmapControl.ToolTip>
        </heatmap:HeatmapControl>
        <dendrogram:DendrogramControl x:Name="file_dendrogram"
                                      ItemsSource="{Binding FileView}"
                                      Tree="{Binding FileTree}"
                                      HorizontalAxis="{Binding AxisMapper, Source={StaticResource FileAxis}}"
                                      VerticalAxis="{Binding AxisMapper, Source={StaticResource FileDendrogramAxis}}"
                                      MinX="{Binding Min, Source={StaticResource FileAxis}}"
                                      MaxX="{Binding Max, Source={StaticResource FileAxis}}"
                                      MinY="{Binding Min, Source={StaticResource FileDendrogramAxis}}"
                                      MaxY="{Binding Max, Source={StaticResource FileDendrogramAxis}}"
                                      HorizontalPropertyName="ID"
                                      IDPropertyName="ID"
                                      Margin="0,5,0,0"
                                      Grid.Column="3" Grid.Row="0" />
        <dendrogram:DendrogramControl x:Name="metabolite_dendrogram"
                                      ItemsSource="{Binding MetaboliteView}"
                                      Tree="{Binding MetaboliteTree}"
                                      HorizontalAxis="{Binding AxisMapper, Source={StaticResource MetaboliteAxis}}"
                                      VerticalAxis="{Binding AxisMapper, Source={StaticResource MetaboliteDendrogramAxis}}"
                                      MinX="{Binding Min, Source={StaticResource MetaboliteAxis}}"
                                      MaxX="{Binding Max, Source={StaticResource MetaboliteAxis}}"
                                      MinY="{Binding Min, Source={StaticResource MetaboliteDendrogramAxis}}"
                                      MaxY="{Binding Max, Source={StaticResource MetaboliteDendrogramAxis}}"
                                      HorizontalPropertyName="ID"
                                      IDPropertyName="ID"
                                      Margin="0,0,10,0"
                                      Grid.Column="4" Grid.Row="2">
            <dendrogram:DendrogramControl.LayoutTransform>
                <TransformGroup>
                    <RotateTransform Angle="90" />
                    <TranslateTransform X="{Binding ActualHeight, ElementName=metabolite_dendrogram}" />
                </TransformGroup>
            </dendrogram:DendrogramControl.LayoutTransform>
        </dendrogram:DendrogramControl>
        <axis:HorizontalAxisControl x:Name="file_axis"
                                    HorizontalAxis="{Binding AxisMapper, Source={StaticResource FileAxis}}"
                                    LabelTicks="{Binding LabelTicks, Source={StaticResource FileAxis}}"
                                    MinX="{Binding Min, Source={StaticResource FileAxis}}"
                                    MaxX="{Binding Max, Source={StaticResource FileAxis}}"
                                    DisplayPropertyName="{Binding DisplayFileProperty}"
                                    Grid.Column="3" Grid.Row="4" >
            <axis:HorizontalAxisControl.ToolTip>
                <ToolTip DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}"
                         Placement="Relative"
                         PlacementRectangle="0,-20,0,0"
                         HorizontalOffset="{Binding FocusedPoint.X}"
                         VerticalOffset="{Binding FocusedPoint.Y}" >
                    <TextBlock Text="{Binding FocusedItem.FileName}" />
                </ToolTip>
            </axis:HorizontalAxisControl.ToolTip>
        </axis:HorizontalAxisControl>
        <axis:VerticalAxisControl x:Name="metabolite_axis"
                                  VerticalAxis="{Binding AxisMapper, Source={StaticResource MetaboliteAxis}}"
                                  LabelTicks="{Binding LabelTicks, Source={StaticResource MetaboliteAxis}}"
                                  MinY="{Binding Min, Source={StaticResource MetaboliteAxis}}"
                                  MaxY="{Binding Max, Source={StaticResource MetaboliteAxis}}"
                                  Grid.Column="1" Grid.Row="2" >
            <axis:VerticalAxisControl.ToolTip>
                <ToolTip DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}"
                         Placement="Relative"
                         PlacementRectangle="10,-10,0,0"
                         HorizontalOffset="{Binding FocusedPoint.X}"
                         VerticalOffset="{Binding FocusedPoint.Y}" >
                    <TextBlock Text="{Binding FocusedItem.MetaboliteName}" />
                </ToolTip>
            </axis:VerticalAxisControl.ToolTip>
        </axis:VerticalAxisControl>
        <axis:HorizontalColorAxisControl x:Name="file_coloraxis"
                                         HorizontalAxis="{Binding AxisMapper, Source={StaticResource FileAxis}}"
                                         LabelTicks="{Binding LabelTicks, Source={StaticResource FileAxis}}"
                                         MinX="{Binding Min, Source={StaticResource FileAxis}}"
                                         MaxX="{Binding Max, Source={StaticResource FileAxis}}"
                                         IdentityPropertyName="TypeBrush"
                                         Grid.Column="3" Grid.Row="1">
            <axis:HorizontalColorAxisControl.ToolTip>
                <ToolTip DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}"
                         Placement="Relative"
                         PlacementRectangle="-5,-5,0,0"
                         HorizontalOffset="{Binding FocusedPoint.X}"
                         VerticalOffset="{Binding FocusedPoint.Y}" >
                    <TextBlock Text="{Binding FocusedItem.ClassName}" />
                </ToolTip>
            </axis:HorizontalColorAxisControl.ToolTip>
        </axis:HorizontalColorAxisControl>
        <GridSplitter Height="2"
                      HorizontalAlignment="Stretch"
                      Background="Black"
                      Margin="0,-2"
                      Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2"/>
        <GridSplitter Width="2"
                      HorizontalAlignment="Stretch"
                      Background="Black"
                      Margin="-2,0"
                      Grid.Column="2" Grid.Row="2" Grid.RowSpan="2"/>
        <TextBlock Text="{Binding XLabel}"
                   FontSize="18"
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Column="3" Grid.Row="5" />
        <TextBlock Text="{Binding YLabel}"
                   FontSize="18"
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Column="0" Grid.Row="2" >
            <TextBlock.LayoutTransform>
                <TransformGroup>
                    <RotateTransform Angle="-90" />
                    <TranslateTransform X="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=TextBlock}}" />
                </TransformGroup>
            </TextBlock.LayoutTransform>
        </TextBlock>
    </Grid>
</UserControl>
