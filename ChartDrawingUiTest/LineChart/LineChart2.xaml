<Page x:Class="ChartDrawingUiTest.LineChart.LineChart2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChartDrawingUiTest.LineChart"
      mc:Ignorable="d" 
      xmlns:chart="clr-namespace:CompMs.Graphics.Compound;assembly=ChartDrawing"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LineChart2">
    <Page.DataContext>
        <local:LineChartVM2 />
    </Page.DataContext>
    <Grid>
        <chart:ChartWithAxisControl DrawingChart="{Binding DrawingLineChart}"   
                                    DrawingHorizontalAxis="{Binding DrawingXAxis}"
                                    DrawingVerticalAxis="{Binding DrawingYAxis}"
                                    Margin="5" />
    </Grid>
</Page>
