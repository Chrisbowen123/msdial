<Page x:Class="ChartDrawingUiTest.LineChart.LineChart3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChartDrawingUiTest.LineChart"
      xmlns:linechart="clr-namespace:CompMs.Graphics.LineChart;assembly=ChartDrawing"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LineChart3">
    <Page.DataContext>
        <local:LineChartVM3 />
    </Page.DataContext>
    <Page.Resources>
        <x:Array Type="Pen" x:Key="ChartPens">
            <Pen Brush="Red" Thickness="2"/>
            <Pen Brush="Blue" Thickness="2"/>
            <Pen Brush="Green" Thickness="2"/>
            <Pen Brush="Yellow" Thickness="2"/>
        </x:Array>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <linechart:LineChart ItemsSource="{Binding Serieses}"
                             Pens="{StaticResource ChartPens}"
                             Margin="5" />
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1">
            <TextBlock Text="ID="/>
            <TextBlock Text="{Binding Serieses/ID}"/>
        </StackPanel>
    </Grid>
</Page>
