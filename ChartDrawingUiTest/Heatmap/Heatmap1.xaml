<Page x:Class="ChartDrawingUiTest.Heatmap.Heatmap1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChartDrawingUiTest.Heatmap"
      xmlns:heatmap="clr-namespace:CompMs.Graphics.Core.Heatmap;assembly=ChartDrawing"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Heatmap1">
    <Page.DataContext>
        <local:HeatmapVM/>
    </Page.DataContext>
    <Grid>
        <heatmap:HeatmapCoreControl
            x:Name="HeatmapCoreControl"
            DataMatrix="{Binding DataMatrix}"
            Margin="5" />
    </Grid>
</Page>
