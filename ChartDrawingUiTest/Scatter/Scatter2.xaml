<Page x:Class="ChartDrawingUiTest.Scatter.Scatter2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChartDrawingUiTest.Scatter"
      mc:Ignorable="d" 
      xmlns:chart="clr-namespace:CompMs.Graphics.Scatter;assembly=ChartDrawing"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Scatter2">
    <Page.DataContext>
        <local:ScatterVM2 />
    </Page.DataContext>
    <Page.Resources>
        <x:Array Type="Brush" x:Key="ChartBrushes">
            <x:Static Member="Brushes.Red" />
            <x:Static Member="Brushes.Blue" />
            <x:Static Member="Brushes.Green" />
        </x:Array>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <chart:ScatterChart ItemsSource="{Binding Series}"
                            Brushes="{StaticResource ChartBrushes}"
                            Margin="5" />
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1">
            <TextBlock Text="X="/>
            <TextBlock Text="{Binding Series/X}"/>
            <TextBlock Text=" Y="/>
            <TextBlock Text="{Binding Series/Y}"/>
        </StackPanel>
    </Grid>
</Page>
