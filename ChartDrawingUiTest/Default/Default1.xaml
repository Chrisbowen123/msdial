<Page x:Class="ChartDrawingUiTest.Default.Default1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChartDrawingUiTest.Default"
      xmlns:control="clr-namespace:CompMs.Graphics.Core.Base;assembly=ChartDrawing"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Default1">
    <Page.DataContext>
        <local:DefaultVM/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="DefaultControl"
               Grid.Row="0"/>
        <control:DefaultControl x:Name="ChartData" ChartData="{Binding Data, Mode=TwoWay, NotifyOnSourceUpdated=True}"
                                Grid.Row="1"/>
        <Slider Value="{Binding Data.DataMinX}"
                Minimum="{Binding Data.LimitMinX}"
                Maximum="{Binding Data.LimitMaxX}"
                Grid.Row="2"/>
        <Slider Value="{Binding Data.DataMaxX}"
                Minimum="{Binding Data.LimitMinX}"
                Maximum="{Binding Data.LimitMaxX}"
                Grid.Row="3"/>
    </Grid>
</Page>
