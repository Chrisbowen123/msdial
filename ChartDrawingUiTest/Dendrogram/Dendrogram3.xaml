<Page x:Class="ChartDrawingUiTest.Dendrogram.Dendrogram3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChartDrawingUiTest.Dendrogram"
      xmlns:dendrogram="clr-namespace:CompMs.Graphics.Core.Dendrogram;assembly=ChartDrawing"
      xmlns:axis="clr-namespace:CompMs.Graphics.Core.GraphAxis;assembly=ChartDrawing"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dendrogram3">
    <Page.DataContext>
        <local:DendrogramVM2/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <dendrogram:DendrogramCoreControl
            x:Name="xdendrogram"
            Dendrogram="{Binding XDendrogram}"
            Margin="5, 10, 5, 0"
            Grid.Row="0" Grid.Column="0"/>
        <axis:CategoryHorizontalAxisCoreControl
            Labels="{Binding XLabels}"
            XPositions="{Binding LeafPositions, ElementName=xdendrogram}"
            MinX="{Binding MinX, ElementName=xdendrogram, Mode=TwoWay}"
            MaxX="{Binding MaxX, ElementName=xdendrogram, Mode=TwoWay}"
            Margin="5, 0, 5, 10"
            Grid.Row="1" Grid.Column="0"/>
        <dendrogram:DendrogramCoreControl
            x:Name="ydendrogram"
            Dendrogram="{Binding YDendrogram}"
            Margin="5, 10, 5, 0"
            Grid.Row="0" Grid.Column="1"/>
        <axis:CategoryHorizontalAxisCoreControl
            Labels="{Binding YLabels}"
            XPositions="{Binding LeafPositions, ElementName=ydendrogram}"
            MinX="{Binding MinX, ElementName=ydendrogram, Mode=TwoWay}"
            MaxX="{Binding MaxX, ElementName=ydendrogram, Mode=TwoWay}"
            Margin="5, 0, 5, 10"
            Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Page>
