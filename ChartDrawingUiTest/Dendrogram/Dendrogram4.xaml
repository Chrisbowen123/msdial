<Page x:Class="ChartDrawingUiTest.Dendrogram.Dendrogram4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChartDrawingUiTest.Dendrogram"
      xmlns:chart="clr-namespace:CompMs.Graphics.Base;assembly=ChartDrawing"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dendrogram4">
    <Page.Resources>
        <ResourceDictionary Source="/ChartDrawing;component/GraphAxis/GraphAxisResource.xaml"/>
    </Page.Resources>
    <Page.DataContext>
        <local:DendrogramVM3/>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <chart:DefaultControl
            DrawingChart="{Binding XDrawingDendrogram}"
            Margin="5, 5, 5, 0"
            Grid.Column="0" Grid.Row="0"/>
        <chart:DefaultControl
            DrawingChart="{Binding YDrawingDendrogram}"
            Margin="5, 5, 5, 0"
            Grid.Column="1" Grid.Row="0"/>
        <chart:DefaultControl
            DrawingChart="{Binding XDrawingHorizontalAxis}"
            Style="{StaticResource CategoryHorizontalAxis}"
            Margin="5, 0, 5, 2"
            Grid.Column="0" Grid.Row="1"/>
        <chart:DefaultControl
            DrawingChart="{Binding YDrawingHorizontalAxis}"
            Style="{StaticResource CategoryHorizontalAxis}"
            Margin="5, 0, 5, 2"
            Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Page>
