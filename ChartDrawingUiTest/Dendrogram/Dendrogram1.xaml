<Page x:Class="ChartDrawingUiTest.Dendrogram.Dendrogram1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChartDrawingUiTest.Dendrogram"
      xmlns:dendrogram="clr-namespace:CompMs.Graphics.Core.Dendrogram;assembly=ChartDrawing"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DendrogramTest1">
    <Page.DataContext>
        <local:DendrogramVM/>
    </Page.DataContext>
    <Grid>
        <dendrogram:DendrogramCoreControl
            Dendrogram="{Binding Dendrogram}" Margin="5"/>
    </Grid>
</Page>
