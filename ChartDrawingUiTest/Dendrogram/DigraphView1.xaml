<Page x:Class="ChartDrawingUiTest.Dendrogram.DigraphView1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChartDrawingUiTest.Dendrogram"
      xmlns:dendrogram="clr-namespace:CompMs.Graphics.Dendrogram;assembly=ChartDrawing"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DigraphView1">
    <Page.DataContext>
        <local:DendrogramVM/>
    </Page.DataContext>
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding SelectedItem.Name, ElementName=digraphview, Mode=OneWay}"/>
            <dendrogram:DigraphView
                x:Name="digraphview"
                GraphSource="{Binding Dendrogram}"
                Labels="{Binding Labels}">
                <dendrogram:DigraphView.ItemTemplate>
                    <HierarchicalDataTemplate DataType= "local:DigraphView.DigraphItem" ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Name}"/>
                    </HierarchicalDataTemplate>
                </dendrogram:DigraphView.ItemTemplate>
            </dendrogram:DigraphView>
        </StackPanel>
    </Grid>
</Page>
